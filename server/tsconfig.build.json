{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "checkJs": false
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "tests/**/*.ts",
    "jest.config.ts",
    "components/**/*.ts",
    "middleware/validators/**/*.ts",
    "routes/**/*.ts",
    "utils/**/*.ts",
    "controllers/**/*.ts",
    "src/openapi/**/*.ts",
    "models/**/*.ts"
  ],
  "include": ["server.ts"]
}
