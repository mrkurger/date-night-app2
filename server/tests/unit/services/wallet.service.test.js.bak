      // Get page 2 with 10 items per page
      const result = await walletService.getWalletTransactions(mockUser._id, {}, 2, 10);

      expect(result.transactions).toHaveLength(10);
      expect(result.pagination).toEqual({
        page: 2,
        limit: 10,
        total: 25,
        pages: 3,
