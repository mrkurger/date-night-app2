{
  "server/**/*.js": [
    "cd server && eslint --fix",
    "cd server && prettier --write"
  ],
  "client-angular/src/**/*.ts": [
    "cd client-angular && eslint --fix",
    "cd client-angular && prettier --write"
  ],
  "client-angular/src/**/*.html": ["cd client-angular && prettier --write"],
  "client-angular/src/**/*.{scss,css}": [
    "cd client-angular && prettier --write"
  ],
  "*.json": ["prettier --write"]
}
