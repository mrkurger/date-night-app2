// Light Theme Variables
@use '../design-system/variables' as *;

:root {
  // Base colors
  --body-bg: #{$color-neutral-200};
  --body-color: #{$color-neutral-800};

  // Component colors
  --navbar-bg: #{$color-neutral-100};
  --navbar-color: #{$color-neutral-800};
  --navbar-border-color: #{$color-neutral-300};

  --sidebar-bg: #{$color-neutral-100};
  --sidebar-color: #{$color-neutral-800};
  --sidebar-border-color: #{$color-neutral-300};

  --footer-bg: #{$color-neutral-800};
  --footer-color: #{$color-neutral-200};

  --card-bg: #{$color-neutral-100};
  --card-border-color: #{$color-neutral-300};

  --input-bg: #{$color-neutral-100};
  --input-border-color: #{$color-neutral-400};
  --input-color: #{$color-neutral-800};
  --input-placeholder-color: #{$color-neutral-500};

  --btn-default-bg: #{$color-neutral-100};
  --btn-default-color: #{$color-neutral-800};
  --btn-default-border-color: #{$color-neutral-400};

  // Semantic colors
  --success-bg: rgba(#{$color-success}, 0.1);
  --warning-bg: rgba(#{$color-warning}, 0.1);
  --error-bg: rgba(#{$color-error}, 0.1);
  --info-bg: rgba(#{$color-info}, 0.1);
}
