// Main Stylesheet
// This is the main entry point for all styles in the application

// @use rules must come first
@use '@nebular/theme/styles/theming' as theming;
@use '@nebular/theme/styles/themes/default' as default-theme;
@use '@nebular/theme/styles/themes/dark' as dark-theme;
@use './mixins/index' as mixins;

// Import Leaflet CSS
@use 'leaflet/dist/leaflet.css' as *;

// Eva Icons
@use 'node_modules/eva-icons/style/eva-icons.css' as *;

// Nebular prebuilt theme - use correct path
@use '@nebular/theme/prebuilt/default.css' as *;

// Register the default theme
$nb-themes: theming.nb-register-theme((), default, default-theme.$theme);

// Register the dark theme
$nb-themes: theming.nb-register-theme((), dark, dark-theme.$theme);

// Install the themes
@include theming.nb-install() {
  @include theming.nb-theme-global();
}

// Global styles
body {
  margin: 0;
  font-family: Arial, Helvetica, sans-serif;
}

// Add additional global styles here

// Main layout
.app-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

.main-content {
  flex: 1;
  padding: theming.nb-theme(padding);
}

// Header
.app-header {
  position: sticky;
  top: 0;
  z-index: theming.nb-theme(layout-z-index);
  background-color: theming.nb-theme(header-background-color);
  border-bottom: theming.nb-theme(divider-width) solid theming.nb-theme(divider-color);
  box-shadow: theming.nb-theme(shadow);
}

// Footer
.app-footer {
  background-color: theming.nb-theme(footer-background-color);
  color: theming.nb-theme(footer-text-color);
  padding: theming.nb-theme(padding-lg) 0;
}

// Responsive font sizes
@media (max-width: theming.nb-theme(breakpoint-sm)) {
  :root {
    font-size: 14px;
  }
}

@media (min-width: theming.nb-theme(breakpoint-xl)) {
  :root {
    font-size: 18px;
  }
}

// Scrollbar styling
::-webkit-scrollbar {
  width: 8px;
  height: 8px;
}

::-webkit-scrollbar-track {
  background: theming.nb-theme(scrollbar-background-color);
}

::-webkit-scrollbar-thumb {
  background: theming.nb-theme(scrollbar-color);
  border-radius: theming.nb-theme(border-radius);
}

::-webkit-scrollbar-thumb:hover {
  background: theming.nb-theme(scrollbar-hover-color);
}

// Focus visible utility
:focus-visible {
  outline: 2px solid theming.nb-theme(color-primary-500);
  outline-offset: 2px;
}

// Print styles
@media print {
  body {
    background-color: white;
    color: black;
  }

  .app-header,
  .app-footer,
  .no-print {
    display: none !important;
  }

  .main-content {
    margin: 0;
    padding: 0;
  }

  a {
    text-decoration: none;
    color: black;
  }

  a[href]:after {
    content: ' (' attr(href) ')';
    font-size: 90%;
    color: #333;
  }
}
