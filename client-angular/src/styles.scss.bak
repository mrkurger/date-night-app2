@use '@nebular/theme/styles/theming' as *;
@use '@nebular/theme/styles/themes/default' as default-theme;
@use '@nebular/theme/styles/themes/dark' as dark-theme;
@use '@nebular/theme/styles/globals' as *;

// Custom theme variables
$theme: (
  // Base colors
  color-primary-100: #f2f6ff,
  color-primary-200: #d9e4ff,
  color-primary-300: #a6c1ff,
  color-primary-400: #598bff,
  color-primary-500: #3366ff,
  color-primary-600: #274bdb,
  color-primary-700: #1a34b8,
  color-primary-800: #102694,
  color-primary-900: #091c7a,

  // Basic colors
  color-basic-100: #ffffff,
  color-basic-200: #f7f9fc,
  color-basic-300: #edf1f7,
  color-basic-400: #e4e9f2,
  color-basic-500: #c5cee0,
  color-basic-600: #8f9bb3,
  color-basic-700: #2e3a59,
  color-basic-800: #222b45,
  color-basic-900: #1a2138,
  color-basic-1000: #151a30,
  color-basic-1100: #101426,

  // Text colors
  text-basic-color: color-basic-800,
  text-disabled-color: color-basic-600,
  text-hint-color: color-basic-600,

  // Background colors
  background-basic-color-1: color-basic-100,
  background-basic-color-2: color-basic-200,
  background-basic-color-3: color-basic-300,
  background-basic-color-4: color-basic-400,

  // Border colors
  border-basic-color-1: color-basic-100,
  border-basic-color-2: color-basic-200,
  border-basic-color-3: color-basic-300,
  border-basic-color-4: color-basic-400,
  border-basic-color-5: color-basic-500,

  // Divider color
  divider-color: color-basic-300,

  // Shadow
  shadow: 0 0.5rem 1rem 0 rgba(44, 51, 73, 0.1)
);

$dark-theme: (
  // Dark theme variables
  color-basic-100: #1b1b38,
  color-basic-200: #1a1a37,
  color-basic-300: #24243e,
  color-basic-400: #2b2b4c,
  color-basic-500: #363b62,
  color-basic-600: #4c5188,
  color-basic-700: #6c72ac,
  color-basic-800: #8f94cc,
  color-basic-900: #b5b9e5,
  color-basic-1000: #dcdefc,
  color-basic-1100: #f7f8ff,

  background-basic-color-1: color-basic-100,
  background-basic-color-2: color-basic-200,
  background-basic-color-3: color-basic-300,
  background-basic-color-4: color-basic-400,

  border-basic-color-1: color-basic-100,
  border-basic-color-2: color-basic-200,
  border-basic-color-3: color-basic-300,
  border-basic-color-4: color-basic-400,
  border-basic-color-5: color-basic-500,

  text-basic-color: color-basic-1000,
  text-disabled-color: color-basic-600,
  text-hint-color: color-basic-600,

  divider-color: color-basic-300,

  shadow: 0 0.5rem 1rem 0 rgba(0, 0, 0, 0.2)
);

$nb-themes: nb-register-theme($theme, default, default-theme.$default);
$nb-themes: nb-register-theme($dark-theme, dark, dark-theme.$dark);

// Include Nebular styles
@include nb-install() {
  @include nb-theme-global();
}

// Global styles
html,
body {
  margin: 0;
  padding: 0;
  height: 100%;
}

body {
  font-family: var(--text-paragraph-font-family);
  font-size: var(--text-paragraph-font-size);
  line-height: var(--text-paragraph-line-height);
  color: var(--text-basic-color);
  background-color: var(--background-basic-color-1);
}
