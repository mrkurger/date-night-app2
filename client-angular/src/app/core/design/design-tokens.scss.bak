/**
 * DateNight.io Design System
 * 
 * This file contains all design tokens used throughout the application.
 * Uses Nebular theme variables for consistent styling.
 */

// Use Sass built-in color module
@use 'sass:color';

// Function to convert CSS variable to color
@function get-color($var) {
  @return rgb(var(#{$var}));
}

// Function to safely adjust color
@function safe-color-adjust($color, $lightness-amount) {
  @if type-of($color) == 'string' and str-index($color, 'var(') != null {
    $color: get-color($color);
  }
  @return color.adjust($color, $lightness: $lightness-amount);
}

// Primary colors - Using Nebular theme variables
$primary-50: var(--text-primary-50-color);
$primary-100: var(--text-primary-100-color);
$primary-200: var(--text-primary-200-color);
$primary-300: var(--text-primary-300-color);
$primary-400: var(--text-primary-400-color);
$primary-500: var(--text-primary-500-color);
$primary-600: var(--text-primary-600-color);
$primary-700: var(--text-primary-700-color);
$primary-800: var(--text-primary-800-color);
$primary-900: var(--text-primary-900-color);

// Secondary colors
$secondary-100: var(--text-secondary-100-color);
$secondary-200: var(--text-secondary-200-color);
$secondary-300: var(--text-secondary-300-color);
$secondary-400: var(--text-secondary-400-color);
$secondary-500: var(--text-secondary-500-color);
$secondary-600: var(--text-secondary-600-color);
$secondary-700: var(--text-secondary-700-color);
$secondary-800: var(--text-secondary-800-color);
$secondary-900: var(--text-secondary-900-color);

// Neutral colors
$neutral-50: var(--background-basic-color-1);
$neutral-100: var(--background-basic-color-2);
$neutral-200: var(--background-basic-color-3);
$neutral-300: var(--background-basic-color-4);
$neutral-400: var(--text-disabled-color);
$neutral-500: var(--text-basic-color);
$neutral-600: var(--text-hint-color);
$neutral-700: var(--text-alternate-color);
$neutral-800: var(--text-control-color);
$neutral-900: var(--text-dark-color);

// Semantic colors
$success: var(--color-success-default);
$success-light: var(--color-success-100);
$success-dark: var(--color-success-800);

$warning: var(--color-warning-default);
$warning-light: var(--color-warning-100);
$warning-dark: var(--color-warning-800);

$error: var(--color-danger-default);
$error-light: var(--color-danger-100);
$error-dark: var(--color-danger-800);

$info: var(--color-info-default);
$info-light: var(--color-info-100);
$info-dark: var(--color-info-800);

// Typography
$font-primary: var(--text-heading-1-font-family);
$font-secondary: var(--text-paragraph-font-family);
$font-monospace: var(--text-monospace-font-family);

// Font sizes
$font-size-xs: var(--text-caption-2-font-size);
$font-size-sm: var(--text-caption-font-size);
$font-size-base: var(--text-paragraph-font-size);
$font-size-md: var(--text-subtitle-font-size);
$font-size-lg: var(--text-subtitle-2-font-size);
$font-size-xl: var(--text-heading-6-font-size);
$font-size-2xl: var(--text-heading-5-font-size);
$font-size-3xl: var(--text-heading-4-font-size);
$font-size-4xl: var(--text-heading-3-font-size);

// Font weights
$font-weight-light: var(--text-paragraph-font-weight);
$font-weight-regular: var(--text-button-font-weight);
$font-weight-medium: var(--text-subtitle-font-weight);
$font-weight-semibold: var(--text-subtitle-2-font-weight);
$font-weight-bold: var(--text-heading-1-font-weight);

// Line heights
$line-height-tight: var(--text-caption-line-height);
$line-height-snug: var(--text-button-line-height);
$line-height-normal: var(--text-paragraph-line-height);
$line-height-relaxed: var(--text-subtitle-line-height);
$line-height-loose: var(--text-heading-1-line-height);

// Spacing
$spacing-0: 0;
$spacing-1: 0.25rem;
$spacing-2: 0.5rem;
$spacing-3: 0.75rem;
$spacing-4: 1rem;
$spacing-5: 1.25rem;
$spacing-6: 1.5rem;
$spacing-8: 2rem;
$spacing-10: 2.5rem;
$spacing-12: 3rem;
$spacing-16: 4rem;
$spacing-20: 5rem;
$spacing-24: 6rem;
$spacing-32: 8rem;

// Border radius
$border-radius-none: 0;
$border-radius-sm: var(--border-radius);
$border-radius-md: var(--card-border-radius);
$border-radius-lg: var(--border-radius-large);
$border-radius-xl: calc(var(--border-radius-large) * 1.5);
$border-radius-2xl: calc(var(--border-radius-large) * 2);
$border-radius-full: 9999px;

// Shadows
$shadow-none: none;
$shadow-xs: var(--shadow);
$shadow-sm: var(--card-shadow);
$shadow-md: var(--layout-shadow);
$shadow-lg: var(--sidebar-shadow);
$shadow-xl: var(--popover-shadow);
$shadow-2xl: var(--dialog-shadow);
$shadow-inner: inset 0 2px 4px 0 rgba(0, 0, 0, 0.06);

// Z-index
$z-index-0: 0;
$z-index-10: 10;
$z-index-20: 20;
$z-index-30: 30;
$z-index-40: 40;
$z-index-50: 50;
$z-index-auto: auto;

// Transitions
$transition-fast: var(--button-outline-width-focus);
$transition-normal: var(--button-filled-border-width);
$transition-slow: var(--button-ghost-border-width);
$transition-ease: var(--button-rectangle-border-radius);
$transition-ease-in: var(--button-semi-round-border-radius);
$transition-ease-out: var(--button-round-border-radius);
$transition-ease-in-out: var(--button-hero-glow-size);

// Breakpoints
$breakpoint-xs: 320px;
$breakpoint-sm: 576px;
$breakpoint-md: 768px;
$breakpoint-lg: 992px;
$breakpoint-xl: 1200px;
$breakpoint-2xl: 1400px;
