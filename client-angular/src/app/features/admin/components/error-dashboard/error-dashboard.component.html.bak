<div class="dashboard-container">
  <h1>Error Monitoring Dashboard</h1>

  <div class="filter-section">
    <form [formGroup]="filterForm" class="filter-form">
      <nb-form-field>
        <nb-form-field-label>Error Category</nb-form-field-label>
        <nb-select formControlName="category">
          <nb-option value="">All Categories</nb-option>
          <nb-option *ngFor="let category of errorCategories" [value]="category.value">
            {{ category.label }}
          </nb-option>
        </nb-select>
      </nb-form-field>

      <nb-form-field>
        <nb-form-field-label>Status Code</nb-form-field-label>
        <input nbInput fullWidth formControlName="statusCode" placeholder="e.g. 404, 500" />
      </nb-form-field>

      <nb-form-field>
        <nb-form-field-label>Date Range</nb-form-field-label>
        <div class="date-range-inputs">
          <input
            nbInput
            formControlName="startDate"
            [nbDatepicker]="startPicker"
            placeholder="Start date"
          />
          <nb-datepicker #startPicker></nb-datepicker>
          <input
            nbInput
            formControlName="endDate"
            [nbDatepicker]="endPicker"
            placeholder="End date"
          />
          <nb-datepicker #endPicker></nb-datepicker>
        </div>
      </nb-form-field>

      <button nbButton status="primary" (click)="applyFilters()">Apply Filters</button>

      <button nbButton (click)="resetFilters()">Reset</button>
    </form>
  </div>

  <div class="dashboard-content">
    <nb-card class="chart-card">
      <nb-card-header>Errors by Category</nb-card-header>
      <nb-card-body>
        <div class="chart-container" *ngIf="!isLoading; else loadingTemplate">
          <ngx-charts-pie-chart
            [results]="errorsByCategory"
            [gradient]="true"
            [legend]="true"
            [labels]="true"
            [doughnut]="true"
          >
          </ngx-charts-pie-chart>
        </div>
      </nb-card-body>
    </nb-card>

    <nb-card class="chart-card">
      <nb-card-header>Errors by Status Code</nb-card-header>
      <nb-card-body>
        <div class="chart-container" *ngIf="!isLoading; else loadingTemplate">
          <ngx-charts-bar-vertical
            [results]="errorsByStatusCode"
            [gradient]="true"
            [xAxis]="true"
            [yAxis]="true"
            [showXAxisLabel]="true"
            [showYAxisLabel]="true"
            xAxisLabel="Status Code"
            yAxisLabel="Count"
          >
          </ngx-charts-bar-vertical>
        </div>
      </nb-card-body>
    </nb-card>

    <nb-card class="chart-card">
      <nb-card-header>Errors Over Time</nb-card-header>
      <nb-card-body>
        <div class="chart-container" *ngIf="!isLoading; else loadingTemplate">
          <ngx-charts-line-chart
            [results]="errorsOverTime"
            [gradient]="true"
            [xAxis]="true"
            [yAxis]="true"
            [showXAxisLabel]="true"
            [showYAxisLabel]="true"
            xAxisLabel="Date"
            yAxisLabel="Count"
          >
          </ngx-charts-line-chart>
        </div>
      </nb-card-body>
    </nb-card>
  </div>

  <nb-card class="error-list-card">
    <nb-card-header>Recent Errors</nb-card-header>
    <nb-card-body>
      <div class="table-container" *ngIf="!isLoading; else loadingTemplate">
        <table nbTable [nbTreeGrid]="dataSource" [nbSort]="sort" (sortChange)="sortData($event)">
          <!-- Timestamp Column -->
          <ng-container nbTreeGridColumnDef="timestamp">
            <th nbTreeGridHeaderCell *nbTreeGridHeaderCellDef nbSortHeader>Timestamp</th>
            <td nbTreeGridCell *nbTreeGridCellDef="let row">
              {{ row.data.timestamp | date: 'medium' }}
            </td>
          </ng-container>

          <!-- Error Code Column -->
          <ng-container nbTreeGridColumnDef="errorCode">
            <th nbTreeGridHeaderCell *nbTreeGridHeaderCellDef nbSortHeader>Error Code</th>
            <td nbTreeGridCell *nbTreeGridCellDef="let row">{{ row.data.errorCode }}</td>
          </ng-container>

          <!-- Status Column -->
          <ng-container nbTreeGridColumnDef="status">
            <th nbTreeGridHeaderCell *nbTreeGridHeaderCellDef nbSortHeader>Status</th>
            <td nbTreeGridCell *nbTreeGridCellDef="let row">{{ row.data.statusCode }}</td>
          </ng-container>

          <!-- Category Column -->
          <ng-container nbTreeGridColumnDef="category">
            <th nbTreeGridHeaderCell *nbTreeGridHeaderCellDef nbSortHeader>Category</th>
            <td nbTreeGridCell *nbTreeGridCellDef="let row">
              <nb-badge
                [text]="getCategoryLabel(row.data.category)"
                [status]="getCategoryStatus(row.data.category)"
              >
              </nb-badge>
            </td>
          </ng-container>

          <!-- URL Column -->
          <ng-container nbTreeGridColumnDef="url">
            <th nbTreeGridHeaderCell *nbTreeGridHeaderCellDef nbSortHeader>URL</th>
            <td nbTreeGridCell *nbTreeGridCellDef="let row" class="url-cell">{{ row.data.url }}</td>
          </ng-container>

          <!-- Message Column -->
          <ng-container nbTreeGridColumnDef="message">
            <th nbTreeGridHeaderCell *nbTreeGridHeaderCellDef>Message</th>
            <td nbTreeGridCell *nbTreeGridCellDef="let row">{{ row.data.userMessage }}</td>
          </ng-container>

          <!-- Actions Column -->
          <ng-container nbTreeGridColumnDef="actions">
            <th nbTreeGridHeaderCell *nbTreeGridHeaderCellDef></th>
            <td nbTreeGridCell *nbTreeGridCellDef="let row">
              <button nbButton ghost (click)="viewErrorDetails(row.data)">
                <nb-icon icon="eye-outline"></nb-icon>
              </button>
            </td>
          </ng-container>

          <tr nbTreeGridHeaderRow *nbTreeGridHeaderRowDef="displayedColumns"></tr>
          <tr nbTreeGridRow *nbTreeGridRowDef="let row; columns: displayedColumns"></tr>
        </table>

        <nb-paginator
          [length]="totalErrors"
          [pageSize]="pageSize"
          [pageSizeOptions]="[5, 10, 25, 50]"
          (pageChange)="onPageChange($event)"
        >
        </nb-paginator>
      </div>
    </nb-card-body>
  </nb-card>
</div>

<ng-template #loadingTemplate>
  <div class="loading-container">
    <nb-spinner></nb-spinner>
    <p>Loading data...</p>
  </div>
</ng-template>

<ng-template #errorDetailsDialog>
  <div class="error-details-dialog">
    <h2>Error Details</h2>
    <div class="error-details-content">
      <div class="error-header">
        <div class="error-title">
          <h3>{{ selectedError?.errorCode }}</h3>
          <nb-badge
            [text]="getCategoryLabel(selectedError?.category)"
            [status]="getCategoryStatus(selectedError?.category)"
          >
          </nb-badge>
        </div>
        <div class="error-meta">
          <p><strong>Status:</strong> {{ selectedError?.statusCode }}</p>
          <p><strong>Timestamp:</strong> {{ selectedError?.timestamp | date: 'medium' }}</p>
        </div>
      </div>

      <div class="error-messages">
        <p><strong>User Message:</strong> {{ selectedError?.userMessage }}</p>
        <p><strong>Technical Message:</strong> {{ selectedError?.technicalMessage }}</p>
      </div>

      <div class="error-request">
        <h4>Request Details</h4>
        <p><strong>URL:</strong> {{ selectedError?.url }}</p>
        <p><strong>Method:</strong> {{ selectedError?.method }}</p>
        <div *ngIf="selectedError?.context?.requestDetails">
          <h5>Headers</h5>
          <pre>{{ selectedError?.context?.requestDetails?.headers | json }}</pre>

          <h5>Body</h5>
          <pre>{{ selectedError?.context?.requestDetails?.body | json }}</pre>
        </div>
      </div>

      <div class="error-response" *ngIf="selectedError?.response">
        <h4>Response</h4>
        <pre>{{ selectedError?.response | json }}</pre>
      </div>
    </div>
  </div>
</ng-template>
