@use '../../../assets/styles/design-system.scss' as ds;

.profile-container {
  padding: 2rem;
  background-color: var(--background-basic-color-2);
  min-height: 100vh;

  nb-card {
    margin: 0 auto;
    max-width: 800px;
  }

  h2 {
    margin: 0;
    color: var(--text-basic-color);
    font-weight: 600;
  }

  .loading-spinner {
    display: flex;
    justify-content: center;
    padding: 2rem;
  }

  form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .profile-image-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    margin-bottom: 2rem;

    .profile-image {
      width: 150px;
      height: 150px;
      border-radius: 50%;
      object-fit: cover;
      border: 2px solid var(--border-basic-color-3);
    }

    .image-upload {
      display: flex;
      gap: 1rem;
    }
  }

  .form-row {
    display: flex;
    gap: 1rem;
    margin-bottom: 1rem;

    nb-form-field {
      flex: 1;
    }

    @media (max-width: 768px) {
      flex-direction: column;
      gap: 1.5rem;
    }
  }

  .preferences-section {
    background-color: var(--background-basic-color-1);
    padding: 1.5rem;
    border-radius: var(--border-radius);
    margin: 1.5rem 0;

    h3 {
      margin: 0 0 1.5rem;
      color: var(--text-basic-color);
      font-weight: 500;
    }

    nb-toggle {
      margin-bottom: 1.5rem;
    }
  }

  .form-actions {
    display: flex;
    justify-content: flex-end;
    gap: 1rem;
    margin-top: 2rem;

    button {
      min-width: 120px;
    }
  }

  nb-form-field {
    width: 100%;
  }

  .error-icon nb-icon {
    color: var(--color-danger-default);
  }

  nb-alert {
    margin-bottom: 1.5rem;
  }

  textarea {
    min-height: 100px;
    resize: vertical;
  }
}

.profile-header {
  display: flex;
  align-items: center;
  margin-bottom: var(--space-6);

  .avatar {
    margin-right: var(--space-4);
  }

  .profile-title {
    margin-bottom: var(--space-1);
  }

  .profile-subtitle {
    color: var(--neutral-600);
    margin: 0;
  }
}

.profile-section {
  margin-bottom: var(--space-6);

  .section-title {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    margin-bottom: var(--space-4);
    color: var(--neutral-800);
    border-bottom: var(--border-width-thin) solid var(--neutral-300);
    padding-bottom: var(--space-2);
  }
}

.profile-info-item {
  display: flex;
  margin-bottom: var(--space-3);

  .info-label {
    font-weight: var(--font-weight-medium);
    width: 120px;
    color: var(--neutral-700);
  }

  .info-value {
    color: var(--neutral-800);
    flex: 1;
  }
}

.profile-actions {
  display: flex;
  gap: var(--space-3);
  margin-top: var(--space-6);
}

.error-message {
  background-color: rgba(255, 71, 87, 0.1);
  color: var(--error);
  padding: var(--space-3);
  border-radius: var(--border-radius-md);
  margin-bottom: var(--space-4);
}

@media (max-width: 768px) {
  .profile-header {
    flex-direction: column;
    text-align: center;

    .avatar {
      margin-right: 0;
      margin-bottom: var(--space-4);
    }
  }

  .profile-info-item {
    flex-direction: column;

    .info-label {
      width: 100%;
      margin-bottom: var(--space-1);
    }
  }

  .profile-actions {
    flex-direction: column;
  }
}
