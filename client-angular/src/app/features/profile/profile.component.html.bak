<div class="profile-container">
  <nb-card>
    <nb-card-header>
      <h2>My Profile</h2>
    </nb-card-header>

    <nb-card-body>
      <div *ngIf="isLoading" class="loading-spinner">
        <nb-spinner status="primary"></nb-spinner>
      </div>

      <nb-alert *ngIf="errorMessage" status="danger">
        {{ errorMessage }}
      </nb-alert>

      <nb-alert *ngIf="successMessage" status="success">
        {{ successMessage }}
      </nb-alert>

      <form [formGroup]="profileForm" (ngSubmit)="onSubmit()" *ngIf="userProfile">
        <div class="profile-image-container">
          <img
            [src]="userProfile.profileImage || 'assets/images/default-profile.png'"
            alt="Profile Image"
            class="profile-image"
          />
          <div class="image-upload">
            <button nbButton status="primary" ghost (click)="fileInput.click()">
              <nb-icon icon="camera-outline"></nb-icon>
              Change Photo
            </button>
            <input
              #fileInput
              type="file"
              id="profileImage"
              accept="image/*"
              hidden
              (change)="onFileSelected($event)"
            />
          </div>
        </div>

        <div class="form-row">
          <nb-form-field>
            <nb-icon nbPrefix icon="person-outline"></nb-icon>
            <input
              nbInput
              fullWidth
              formControlName="firstName"
              placeholder="First Name"
              [status]="
                profileForm.get('firstName')?.touched && profileForm.get('firstName')?.invalid
                  ? 'danger'
                  : 'basic'
              "
            />
            <span
              nbSuffix
              *ngIf="profileForm.get('firstName')?.touched && profileForm.get('firstName')?.invalid"
              class="error-icon"
            >
              <nb-icon icon="alert-circle-outline" status="danger"></nb-icon>
            </span>
          </nb-form-field>

          <nb-form-field>
            <nb-icon nbPrefix icon="person-outline"></nb-icon>
            <input
              nbInput
              fullWidth
              formControlName="lastName"
              placeholder="Last Name"
              [status]="
                profileForm.get('lastName')?.touched && profileForm.get('lastName')?.invalid
                  ? 'danger'
                  : 'basic'
              "
            />
            <span
              nbSuffix
              *ngIf="profileForm.get('lastName')?.touched && profileForm.get('lastName')?.invalid"
              class="error-icon"
            >
              <nb-icon icon="alert-circle-outline" status="danger"></nb-icon>
            </span>
          </nb-form-field>
        </div>

        <nb-form-field>
          <nb-icon nbPrefix icon="edit-2-outline"></nb-icon>
          <textarea nbInput fullWidth formControlName="bio" placeholder="Bio" rows="4"></textarea>
        </nb-form-field>

        <nb-form-field>
          <nb-icon nbPrefix icon="phone-outline"></nb-icon>
          <input nbInput fullWidth formControlName="phoneNumber" placeholder="Phone Number" />
        </nb-form-field>

        <div class="form-row">
          <nb-form-field>
            <nb-icon nbPrefix icon="pin-outline"></nb-icon>
            <input nbInput fullWidth formControlName="location.city" placeholder="City" />
          </nb-form-field>

          <nb-form-field>
            <nb-icon nbPrefix icon="globe-outline"></nb-icon>
            <input nbInput fullWidth formControlName="location.country" placeholder="Country" />
          </nb-form-field>
        </div>

        <div class="preferences-section">
          <h3>Preferences</h3>

          <nb-toggle formControlName="preferences.notifications" status="primary">
            Enable Notifications
          </nb-toggle>

          <nb-form-field>
            <nb-icon nbPrefix icon="lock-outline"></nb-icon>
            <nb-select
              fullWidth
              formControlName="preferences.privacy"
              placeholder="Privacy Setting"
            >
              <nb-option value="public">Public</nb-option>
              <nb-option value="private">Private</nb-option>
            </nb-select>
          </nb-form-field>
        </div>

        <div class="form-actions">
          <button nbButton status="basic" type="button" routerLink="/dashboard">
            <nb-icon icon="arrow-back-outline"></nb-icon>
            Cancel
          </button>
          <button
            nbButton
            status="primary"
            type="submit"
            [disabled]="profileForm.invalid || isLoading"
          >
            <nb-icon icon="save-outline"></nb-icon>
            Save Changes
            <nb-spinner *ngIf="isLoading" size="small"></nb-spinner>
          </button>
        </div>
      </form>
    </nb-card-body>
  </nb-card>
</div>
