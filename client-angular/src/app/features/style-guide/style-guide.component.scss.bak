@use '@nebular/theme/styles/theming' as *;
@use '../../../styles/mixins' as mixins;
@use 'src/styles/mixins/_dark-mode.scss' as darkmode;

@include nb-install() {
  :host {
    display: block;
    padding: nb-theme(padding);
  }

  .style-guide {
    &__header {
      background-color: nb-theme(color-primary);
      color: nb-theme(color-white);
      padding: nb-theme(spacing-12) 0;
      margin-bottom: nb-theme(spacing-12);

      @include darkmode.dark-mode {
        background-color: nb-theme(color-primary-dark);
      }
    }

    &__title {
      margin-bottom: nb-theme(margin);
      color: nb-theme(text-basic-color);
      font-weight: bold;
    }

    &__subtitle {
      margin-bottom: nb-theme(margin-sm);
      color: nb-theme(text-hint-color);
    }

    &__description {
      font-size: nb-theme(font-size-lg);
      max-width: 800px;
    }

    &__theme-toggle {
      margin-top: nb-theme(spacing-6);
      padding: nb-theme(spacing-3) nb-theme(spacing-6);
      background-color: nb-theme(color-white);
      color: nb-theme(color-primary);
      border: none;
      border-radius: nb-theme(border-radius-md);
      font-weight: nb-theme(font-weight-medium);
      cursor: pointer;
      transition: all nb-theme(transition-fast) nb-theme(transition-timing-default);

      &:hover {
        background-color: rgba(nb-theme(color-white), 0.9);
      }

      @include darkmode.dark-mode {
        background-color: nb-theme(color-dark-gray-1);
        color: nb-theme(color-light-gray-1);

        &:hover {
          background-color: nb-theme(color-dark-gray-2);
        }
      }
    }

    &__section {
      margin-bottom: nb-theme(margin-lg);
      padding-bottom: nb-theme(spacing-12);
      border-bottom: 1px solid nb-theme(color-light-gray-2);

      @include darkmode.dark-mode {
        border-bottom-color: nb-theme(color-dark-gray-1);
      }
    }

    &__section-title {
      font-size: nb-theme(font-size-3xl);
      margin-bottom: nb-theme(spacing-8);
      position: relative;

      &:after {
        content: '';
        position: absolute;
        bottom: nb-theme(spacing-3);
        left: 0;
        width: 60px;
        height: 4px;
        background-color: nb-theme(color-primary);
        border-radius: nb-theme(border-radius-full);

        @include darkmode.dark-mode {
          background-color: nb-theme(color-primary-light);
        }
      }
    }

    &__subsection {
      margin-bottom: nb-theme(spacing-8);
    }

    &__subsection-title {
      font-size: nb-theme(font-size-xl);
      margin-bottom: nb-theme(spacing-4);
    }

    &__example {
      background-color: nb-theme(color-white);
      border-radius: nb-theme(border-radius-lg);
      padding: nb-theme(spacing-6);
      margin-bottom: nb-theme(spacing-6);
      box-shadow: nb-theme(shadow-sm);

      @include darkmode.dark-mode {
        background-color: nb-theme(color-dark-gray-2);
        box-shadow: 0 0 0 1px rgba(nb-theme(color-white), 0.1);
      }
    }

    &__colors {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
      gap: nb-theme(spacing-md);
    }

    &__color-item {
      padding: nb-theme(padding);
      border-radius: nb-theme(border-radius);
      background-color: nb-theme(background-basic-color-1);
      box-shadow: nb-theme(shadow);

      .color-preview {
        width: 100%;
        height: 100px;
        border-radius: nb-theme(border-radius);
        margin-bottom: nb-theme(margin-sm);

        &--primary {
          background-color: nb-theme(color-primary-500);
        }

        &--success {
          background-color: nb-theme(color-success-500);
        }

        &--warning {
          background-color: nb-theme(color-warning-500);
        }

        &--danger {
          background-color: nb-theme(color-danger-500);
        }

        &--info {
          background-color: nb-theme(color-info-500);
        }
      }

      .color-name {
        font-weight: bold;
        color: nb-theme(text-basic-color);
      }

      .color-value {
        color: nb-theme(text-hint-color);
        font-family: monospace;
      }
    }

    &__typography {
      .text-sample {
        margin-bottom: nb-theme(margin);

        &--h1 {
          font-size: nb-theme(text-heading-1-font-size);
          font-weight: nb-theme(text-heading-1-font-weight);
          line-height: nb-theme(text-heading-1-line-height);
        }

        &--h2 {
          font-size: nb-theme(text-heading-2-font-size);
          font-weight: nb-theme(text-heading-2-font-weight);
          line-height: nb-theme(text-heading-2-line-height);
        }

        &--h3 {
          font-size: nb-theme(text-heading-3-font-size);
          font-weight: nb-theme(text-heading-3-font-weight);
          line-height: nb-theme(text-heading-3-line-height);
        }

        &--h4 {
          font-size: nb-theme(text-heading-4-font-size);
          font-weight: nb-theme(text-heading-4-font-weight);
          line-height: nb-theme(text-heading-4-line-height);
        }

        &--h5 {
          font-size: nb-theme(text-heading-5-font-size);
          font-weight: nb-theme(text-heading-5-font-weight);
          line-height: nb-theme(text-heading-5-line-height);
        }

        &--h6 {
          font-size: nb-theme(text-heading-6-font-size);
          font-weight: nb-theme(text-heading-6-font-weight);
          line-height: nb-theme(text-heading-6-line-height);
        }

        &--body {
          font-size: nb-theme(text-paragraph-font-size);
          line-height: nb-theme(text-paragraph-line-height);
        }

        &--caption {
          font-size: nb-theme(text-caption-font-size);
          line-height: nb-theme(text-caption-line-height);
        }
      }
    }

    &__components {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: nb-theme(spacing-lg);
    }

    &__component-item {
      padding: nb-theme(padding);
      border-radius: nb-theme(border-radius);
      background-color: nb-theme(background-basic-color-1);
      box-shadow: nb-theme(shadow);

      .component-title {
        margin-bottom: nb-theme(margin);
        color: nb-theme(text-basic-color);
        font-weight: bold;
      }

      .component-description {
        margin-bottom: nb-theme(margin);
        color: nb-theme(text-hint-color);
      }

      .component-preview {
        padding: nb-theme(padding);
        border: 1px solid nb-theme(border-basic-color-3);
        border-radius: nb-theme(border-radius);
      }
    }

    // Spacing showcase
    &__spacing-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
      gap: nb-theme(spacing-6);
    }

    &__spacing-item {
      display: flex;
      flex-direction: column;
    }

    &__spacing-example {
      background-color: nb-theme(color-primary);
      border-radius: nb-theme(border-radius-md);
      margin-bottom: nb-theme(spacing-2);

      &--spacing-1 {
        height: nb-theme(spacing-1);
      }

      &--spacing-2 {
        height: nb-theme(spacing-2);
      }

      &--spacing-3 {
        height: nb-theme(spacing-3);
      }

      &--spacing-4 {
        height: nb-theme(spacing-4);
      }

      &--spacing-5 {
        height: nb-theme(spacing-5);
      }

      &--spacing-6 {
        height: nb-theme(spacing-6);
      }

      &--spacing-8 {
        height: nb-theme(spacing-8);
      }

      &--spacing-10 {
        height: nb-theme(spacing-10);
      }

      &--spacing-12 {
        height: nb-theme(spacing-12);
      }

      &--spacing-16 {
        height: nb-theme(spacing-16);
      }

      &--spacing-20 {
        height: nb-theme(spacing-20);
      }

      &--spacing-24 {
        height: nb-theme(spacing-24);
      }
    }

    &__spacing-info {
      display: flex;
      flex-direction: column;
    }

    &__spacing-name {
      font-weight: nb-theme(font-weight-medium);
    }

    // Breakpoints showcase
    &__breakpoint-item {
      padding: nb-theme(spacing-4);
      margin-bottom: nb-theme(spacing-4);
      background-color: nb-theme(color-light-gray-2);
      border-radius: nb-theme(border-radius-md);
      font-weight: nb-theme(font-weight-medium);

      @include darkmode.dark-mode {
        background-color: nb-theme(color-dark-gray-1);
      }

      &--mobile {
        border-left: 4px solid nb-theme(color-primary);
      }

      &--tablet {
        border-left: 4px solid nb-theme(color-secondary);
      }

      &--desktop {
        border-left: 4px solid nb-theme(color-success);
      }

      &--desktop-large {
        border-left: 4px solid nb-theme(color-warning);
      }

      &--desktop-xl {
        border-left: 4px solid nb-theme(color-info);
      }
    }

    // Grid showcase
    &__grid-item {
      background-color: nb-theme(color-primary-light);
      color: nb-theme(color-dark-gray-3);
      padding: nb-theme(spacing-4);
      border-radius: nb-theme(border-radius-md);
      margin-bottom: nb-theme(spacing-4);
      text-align: center;

      @include darkmode.dark-mode {
        background-color: nb-theme(color-primary-dark);
        color: nb-theme(color-white);
      }
    }

    // Animation showcase
    &__animation-item {
      display: inline-block;
      padding: nb-theme(spacing-4) nb-theme(spacing-6);
      margin: nb-theme(spacing-2);
      background-color: nb-theme(color-light-gray-2);
      border-radius: nb-theme(border-radius-md);

      @include darkmode.dark-mode {
        background-color: nb-theme(color-dark-gray-1);
      }

      &--fade-in {
        @include mixins.fade-in;
      }

      // @include mixins.slide-in-top; // TODO: Mixin not implemented
      // @include mixins.slide-in-bottom; // TODO: Mixin not implemented
      // @include mixins.slide-in-left; // TODO: Mixin not implemented
      // @include mixins.slide-in-right; // TODO: Mixin not implemented
      // @include mixins.scale-in; // TODO: Mixin not implemented
    }

    // Micro-interactions showcase
    &__micro-item {
      display: inline-block;
      padding: nb-theme(spacing-4) nb-theme(spacing-6);
      margin: nb-theme(spacing-2);
      background-color: nb-theme(color-light-gray-2);
      border-radius: nb-theme(border-radius-md);

      @include darkmode.dark-mode {
        background-color: nb-theme(color-dark-gray-1);
      }

      &--hover-scale {
        @include mixins.hover-scale;
      }

      &--hover-lift {
        @include mixins.hover-lift;
      }

      // @include mixins.hover-color-shift(color, nb-theme(color-dark-gray-2), nb-theme(color-primary)); // TODO: Mixin not implemented

      // @include mixins.click-ripple; // TODO: Mixin not implemented
    }

    // Accessibility showcase
    &__focus-example {
      margin-right: nb-theme(spacing-4);
      padding: nb-theme(spacing-3) nb-theme(spacing-6);
      background-color: nb-theme(color-light-gray-2);
      border: 1px solid nb-theme(color-medium-gray-1);
      border-radius: nb-theme(border-radius-md);

      @include darkmode.dark-mode {
        background-color: nb-theme(color-dark-gray-1);
        border-color: nb-theme(color-dark-gray-2);
      }

      &:focus-visible {
        outline: 2px solid nb-theme(color-primary);
        outline-offset: 2px;
      }
    }

    &__a11y-example {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      width: 40px;
      height: 40px;
      background-color: nb-theme(color-light-gray-2);
      border: 1px solid nb-theme(color-medium-gray-1);
      border-radius: nb-theme(border-radius-full);
      font-size: nb-theme(font-size-xl);
      cursor: pointer;

      @include darkmode.dark-mode {
        background-color: nb-theme(color-dark-gray-1);
        border-color: nb-theme(color-dark-gray-2);
      }
    }

    &__color-info {
      display: flex;
      flex-direction: column;
    }

    &__color-name {
      font-weight: nb-theme(font-weight-medium);
    }
  }
}

// Special typography classes
.body-large {
  font-size: nb-theme(font-size-lg);
}

.body-small {
  font-size: nb-theme(font-size-sm);
}

.body-xs {
  font-size: nb-theme(font-size-xs);
}

.caption {
  font-size: nb-theme(font-size-sm);
  color: nb-theme(color-dark-gray-1);
}

.label {
  display: block;
  font-size: nb-theme(font-size-sm);
  font-weight: nb-theme(font-weight-medium);
  margin-bottom: nb-theme(spacing-2);
}

.button-text {
  font-weight: nb-theme(font-weight-semibold);
}

// Screen reader only class
.sr-only {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border: 0;
}
