@use '../../../styles/variables' as vars;
@use '../../../styles/mixins' as mix;

.favorites-page {
  padding: 2rem;
  max-width: 1200px;
  margin: 0 auto;

  &__header {
    margin-bottom: 2rem;
    text-align: center;
  }

  &__title {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    color: var(--color-text-dark);
  }

  &__description {
    font-size: 1rem;
    color: var(--color-text-muted);
    max-width: 600px;
    margin: 0 auto;
  }

  &__content {
    min-height: 400px;
  }

  &__loading,
  &__error {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 400px;
    text-align: center;

    p {
      margin-top: 1rem;
      color: var(--color-text-muted);
    }
  }
}

.error-message {
  background-color: rgba(var(--color-danger-rgb), 0.1);
  border: 1px solid var(--color-danger);
  border-radius: 0.5rem;
  padding: 2rem;
  display: flex;
  flex-direction: column;
  align-items: center;

  i {
    font-size: 3rem;
    color: var(--color-danger);
    margin-bottom: 1rem;
  }

  p {
    margin-bottom: 1.5rem;
    color: var(--color-text-dark);
  }
}

.btn {
  padding: 0.5rem 1.5rem;
  border-radius: 0.25rem;
  font-size: 0.875rem;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s ease;
  border: none;

  &--primary {
    background-color: var(--color-primary);
    color: white;

    &:hover {
      background-color: var(--color-primary-dark);
    }
  }
}

// Notes modal styles
.notes-modal {
  &__header {
    margin-bottom: 1.5rem;
  }

  &__title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  &__subtitle {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  &__form {
    margin-bottom: 1.5rem;
  }

  &__textarea {
    width: 100%;
    min-height: 120px;
    padding: 0.75rem;
    border: 1px solid var(--color-border);
    border-radius: 0.25rem;
    font-size: 0.875rem;
    resize: vertical;

    &:focus {
      outline: none;
      border-color: var(--color-primary);
      box-shadow: 0 0 0 2px rgba(var(--color-primary-rgb), 0.2);
    }
  }

  &__actions {
    display: flex;
    justify-content: flex-end;
    gap: 0.75rem;
  }
}

// Responsive adjustments
@media (max-width: 768px) {
  .favorites-page {
    padding: 1.5rem;

    &__title {
      font-size: 1.75rem;
    }
  }
}

@media (max-width: 480px) {
  .favorites-page {
    padding: 1rem;

    &__title {
      font-size: 1.5rem;
    }

    &__description {
      font-size: 0.875rem;
    }
  }
}
