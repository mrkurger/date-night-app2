.reviews-page-container {
  padding: 20px;
  max-width: 1200px;
  margin: 0 auto;
}

.reviews-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30px;

  @media (max-width: 768px) {
    flex-direction: column;
    align-items: flex-start;
    gap: 20px;
  }
}

.ad-info {
  display: flex;
  align-items: center;
  gap: 20px;

  @media (max-width: 576px) {
    flex-direction: column;
    align-items: flex-start;
  }
}

.ad-image {
  width: 100px;
  height: 100px;
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);

  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
}

.ad-details {
  display: flex;
  flex-direction: column;
}

.ad-title {
  font-size: 1.5rem;
  font-weight: 600;
  margin: 0 0 10px 0;
  color: #212529;
}

.ad-link {
  color: #007bff;
  text-decoration: none;
  font-size: 0.9rem;
  display: inline-flex;
  align-items: center;
  gap: 5px;

  &:hover {
    text-decoration: underline;
  }

  i {
    font-size: 0.8rem;
  }
}

.reviews-actions {
  .btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 8px 16px;
    border-radius: 4px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;

    &.btn-primary {
      background-color: #007bff;
      border: 1px solid #007bff;
      color: #fff;

      &:hover {
        background-color: #0069d9;
        border-color: #0062cc;
      }
    }

    i {
      font-size: 0.9rem;
    }
  }
}

.review-form-wrapper {
  margin-bottom: 30px;
}

.section-title {
  font-size: 1.5rem;
  font-weight: 600;
  margin-bottom: 20px;
  color: #212529;
  border-bottom: 1px solid #dee2e6;
  padding-bottom: 10px;
}
