/* Reviews list container */
.reviews-list-container {
  padding: 20px 0;
}

/* Loading container */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40px 0;
  color: var(--neutral-600);

  .spinner-border {
    width: 3rem;
    height: 3rem;
    margin-bottom: 1rem;
  }
}

/* Empty state */
.empty-state {
  text-align: center;
  padding: 40px 0;
  color: var(--neutral-600);

  .empty-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
    opacity: 0.5;
  }

  h3 {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
  }

  p {
    font-size: 1rem;
  }
}

/* Reviews list */
.reviews-list {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

/* Review item */
.review-item {
  background-color: var(--neutral-100);
  border-radius: 8px;
  box-shadow: var(--shadow-sm);
  overflow: hidden;
  transition:
    transform 0.2s ease,
    box-shadow 0.2s ease;

  &:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }
}

/* Review header */
.review-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15px 20px;
  background-color: var(--neutral-50);
  border-bottom: 1px solid var(--neutral-200);
}

/* User info */
.user-info {
  display: flex;
  align-items: center;
  gap: 12px;
}

/* Avatar */
.avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  overflow: hidden;
  background-color: var(--neutral-200);
  display: flex;
  align-items: center;
  justify-content: center;

  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  &.anonymous {
    background-color: var(--neutral-600);
    color: var(--neutral-100);
    font-size: 1.2rem;
  }
}

/* User details */
.user-details {
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 1rem;
  font-weight: 500;
  margin: 0;
  color: var(--neutral-900);
}

.review-date {
  font-size: 0.8rem;
  color: var(--neutral-600);
}

/* Review content */
.review-content {
  padding: 20px;
}

/* Rating */
.rating {
  display: flex;
  align-items: center;
  gap: 10px;
  margin-bottom: 10px;
}

.stars {
  display: flex;
  gap: 2px;

  i {
    color: var(--neutral-300);
    font-size: 1.2rem;

    &.filled {
      color: var(--warning);
    }
  }
}

.rating-value {
  font-size: 0.9rem;
  font-weight: 500;
  color: var(--neutral-700);
}

/* Review title and text */
.review-title {
  font-size: 1.2rem;
  font-weight: 600;
  margin-bottom: 10px;
  color: var(--neutral-900);
}

.review-text {
  font-size: 1rem;
  line-height: 1.5;
  color: var(--neutral-700);
  margin-bottom: 15px;
  white-space: pre-line;
}

/* Ad info */
.ad-info {
  margin-bottom: 15px;

  .ad-link {
    color: var(--primary);
    text-decoration: none;
    font-size: 0.9rem;
    display: inline-flex;
    align-items: center;
    gap: 5px;

    &:hover {
      text-decoration: underline;
    }

    i {
      font-size: 0.8rem;
    }
  }
}

/* Review feedback */
.review-feedback {
  display: flex;
  gap: 10px;
  margin-top: 10px;
}

.feedback-btn {
  background: none;
  border: 1px solid var(--neutral-300);
  border-radius: 4px;
  padding: 6px 12px;
  font-size: 0.9rem;
  color: var(--neutral-600);
  display: flex;
  align-items: center;
  gap: 5px;
  cursor: pointer;
  transition: all 0.2s ease;

  &:hover {
    background-color: var(--neutral-50);
  }

  &.active {
    background-color: var(--neutral-200);
    border-color: var(--neutral-400);
    color: var(--neutral-700);
  }

  i {
    font-size: 0.8rem;
  }
}

/* Pagination */
.pagination-container {
  margin-top: 30px;
  display: flex;
  justify-content: center;
}

.pagination {
  display: flex;
  list-style: none;
  padding: 0;
  margin: 0;
  gap: 5px;
}

:is(.page-item) {
  &.active .page-link {
    background-color: var(--primary);
    color: var(--neutral-100);
    border-color: var(--primary);
  }

  &.disabled .page-link {
    color: var(--neutral-600);
    pointer-events: none;
    background-color: var(--neutral-100);
    border-color: var(--neutral-300);
  }
}

.page-link {
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 36px;
  height: 36px;
  padding: 0 10px;
  border: 1px solid var(--neutral-300);
  border-radius: 4px;
  background-color: var(--neutral-100);
  color: var(--primary);
  text-decoration: none;
  cursor: pointer;
  transition: all 0.2s ease;

  &:hover:not(.ellipsis) {
    background-color: var(--neutral-200);
    border-color: var(--neutral-300);
    color: var(--primary-dark);
  }

  &.ellipsis {
    cursor: default;
  }
}
