@use '@nebular/theme/styles/theming' as *;
@use 'src/styles/mixins/_dark-mode.scss' as darkmode;
@use 'src/styles/mixins/index.scss' as mixins;

@include nb-install() {
  :host {
    display: block;
    padding: nb-theme(padding);
  }

  .accessibility-demo {
    &__section {
      margin-bottom: nb-theme(margin-lg);
    }

    &__title {
      margin-bottom: nb-theme(margin);
      color: nb-theme(text-basic-color);
      font-weight: bold;
    }

    &__subtitle {
      margin-bottom: nb-theme(margin-sm);
      color: nb-theme(text-hint-color);
    }

    &__example {
      padding: nb-theme(padding);
      border-radius: nb-theme(border-radius);
      background-color: nb-theme(background-basic-color-1);
      box-shadow: nb-theme(shadow);
      margin-bottom: nb-theme(margin);
    }

    &__button {
      background-color: nb-theme(color-primary-500);
      color: nb-theme(text-control-color);
      border: none;
      padding: nb-theme(padding-sm) nb-theme(padding);
      border-radius: nb-theme(border-radius);
      cursor: pointer;
      transition: all 0.2s ease;

      &:hover {
        background-color: nb-theme(color-primary-600);
      }

      &:active {
        background-color: nb-theme(color-primary-700);
      }

      &:focus-visible {
        outline: 2px solid nb-theme(color-primary-500);
        outline-offset: 2px;
      }

      &:disabled {
        background-color: nb-theme(background-basic-color-3);
        cursor: not-allowed;
      }
    }

    &__input {
      width: 100%;
      padding: nb-theme(padding-sm);
      border: 1px solid nb-theme(border-basic-color-3);
      border-radius: nb-theme(border-radius);
      background-color: nb-theme(background-basic-color-1);
      color: nb-theme(text-basic-color);
      transition: all 0.2s ease;

      &:focus {
        outline: none;
        border-color: nb-theme(color-primary-500);
        box-shadow: 0 0 0 2px nb-theme(color-primary-transparent-200);
      }

      &::placeholder {
        color: nb-theme(text-hint-color);
      }
    }

    &__link {
      color: nb-theme(color-primary-500);
      text-decoration: none;
      transition: all 0.2s ease;

      &:hover {
        color: nb-theme(color-primary-600);
        text-decoration: underline;
      }

      &:focus-visible {
        outline: 2px solid nb-theme(color-primary-500);
        outline-offset: 2px;
      }
    }

    &__skip-link {
      position: absolute;
      top: -40px;
      left: 0;
      padding: nb-theme(padding-sm) nb-theme(padding);
      background-color: nb-theme(color-primary-500);
      color: nb-theme(text-control-color);
      text-decoration: none;
      border-radius: 0 0 nb-theme(border-radius) nb-theme(border-radius);
      transition: top 0.2s ease;

      &:focus {
        top: 0;
      }
    }

    &__contrast-example {
      padding: nb-theme(padding);
      margin-bottom: nb-theme(margin);

      &--good {
        background-color: nb-theme(background-basic-color-1);
        color: nb-theme(text-basic-color);
      }

      &--bad {
        background-color: nb-theme(background-basic-color-1);
        color: nb-theme(text-hint-color);
      }
    }

    &__header {
      background-color: nb-theme(color-primary);
      color: nb-theme(color-white);
      padding: nb-theme(padding-12) 0;
      margin-bottom: nb-theme(margin-12);

      @include darkmode.dark-mode {
        background-color: nb-theme(color-primary-dark);
      }
    }

    &__description {
      font-size: nb-theme(font-size-lg);
      max-width: 800px;
    }

    &__section-title {
      font-size: nb-theme(font-size-3xl);
      margin-bottom: nb-theme(margin-8);
      position: relative;

      &:after {
        content: '';
        position: absolute;
        bottom: nb-theme(margin-3);
        left: 0;
        width: 60px;
        height: 4px;
        background-color: nb-theme(color-primary);
        border-radius: nb-theme(border-radius-full);

        @include darkmode.dark-mode {
          background-color: nb-theme(color-primary-light);
        }
      }
    }

    &__subsection {
      margin-bottom: nb-theme(margin-8);
    }

    &__subsection-title {
      font-size: nb-theme(font-size-xl);
      margin-bottom: nb-theme(margin-4);
    }

    &__code {
      background-color: nb-theme(background-basic-color-2);
      border-radius: nb-theme(border-radius);
      padding: nb-theme(padding);
      margin: nb-theme(margin) 0;
      overflow-x: auto;
    }
  }
}
