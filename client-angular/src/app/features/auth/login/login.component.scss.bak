@use 'sass:color';
@use '@nebular/theme/styles/theming' as *;
@use '@nebular/theme/styles/themes/default' as nb-default;

// Login Component Styles
.login-container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  padding: nb-theme(padding);
  background-color: nb-theme(background-basic-color-2);

  nb-card {
    width: 100%;
    max-width: 400px;
    margin: 0;
    background-color: nb-theme(background-basic-color-1);
    border: none;
    box-shadow: nb-theme(shadow);

    nb-card-header {
      padding: nb-theme(padding);
      border-bottom: 1px solid nb-theme(border-basic-color-3);

      h2 {
        margin: 0;
        color: nb-theme(text-basic-color);
        font-weight: nb-theme(text-heading-2-font-weight);
      }
    }

    nb-card-body {
      padding: nb-theme(padding);
    }
  }
}

.full-width {
  width: 100%;
  margin-bottom: nb-theme(margin);
}

.error-message {
  background-color: nb-theme(color-danger-100);
  color: nb-theme(text-danger-color);
  padding: nb-theme(padding);
  border-radius: nb-theme(border-radius);
  margin-bottom: nb-theme(margin);
}

.validation-message {
  font-size: nb-theme(text-caption-font-size);
  color: nb-theme(text-danger-color);
  margin-top: nb-theme(margin-xs);
}

.form-actions {
  margin-top: nb-theme(margin-lg);

  button {
    nb-spinner {
      margin-right: nb-theme(margin-xs);
    }
  }
}

.form-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: nb-theme(margin-lg);
  font-size: nb-theme(text-caption-font-size);
  color: nb-theme(text-basic-color);

  a {
    color: nb-theme(color-primary-500);
    text-decoration: none;
    transition: color 0.2s ease;

    &:hover {
      color: nb-theme(color-primary-600);
    }
  }

  .spacer {
    flex: 1;
    min-width: 1rem;
  }

  .forgot-password {
    font-weight: nb-theme(text-button-font-weight);
  }

  .register-link {
    font-weight: nb-theme(text-button-font-weight);
  }
}

.password-toggle {
  cursor: pointer;
  color: nb-theme(text-hint-color);
  transition: color 0.2s ease;

  &:hover {
    color: nb-theme(text-basic-color);
  }
}

.login-card {
  width: 100%;
  max-width: 400px;
  border-radius: nb-theme(border-radius);
  box-shadow: nb-theme(shadow);
  overflow: hidden;
}

.login-header {
  padding: nb-theme(padding);
  background-color: nb-theme(color-primary-500);
  color: nb-theme(text-control-color);
  text-align: center;
}

.login-title {
  margin: 0;
  font-size: nb-theme(text-heading-1-font-size);
  font-weight: nb-theme(text-heading-1-font-weight);
}

.login-subtitle {
  margin-top: nb-theme(margin-xs);
  font-size: nb-theme(text-caption-font-size);
  opacity: 0.9;
}

.login-body {
  padding: nb-theme(padding);
}

.login-form {
  display: flex;
  flex-direction: column;
  gap: nb-theme(margin);
}

.form-group {
  display: flex;
  flex-direction: column;
  gap: nb-theme(margin-xs);
}

.form-label {
  font-size: nb-theme(text-caption-font-size);
  font-weight: nb-theme(text-button-font-weight);
  color: nb-theme(text-basic-color);
}

.form-control {
  padding: nb-theme(padding-sm);
  border: 1px solid nb-theme(border-basic-color-3);
  border-radius: nb-theme(border-radius);
  font-size: nb-theme(text-paragraph-font-size);
  transition: all 0.2s ease;

  &:focus {
    outline: none;
    border-color: nb-theme(color-primary-500);
    box-shadow: 0 0 0 2px nb-theme(color-primary-transparent-200);
  }

  &.is-invalid {
    border-color: nb-theme(color-danger-500);
  }
}

.invalid-feedback {
  font-size: nb-theme(text-caption-font-size);
  color: nb-theme(text-danger-color);
  margin-top: nb-theme(margin-xs);
}

.form-check {
  display: flex;
  align-items: center;
  gap: nb-theme(margin-xs);
  margin-top: nb-theme(margin-xs);
}

.form-check-input {
  width: 16px;
  height: 16px;
  cursor: pointer;
}

.form-check-label {
  font-size: nb-theme(text-caption-font-size);
  color: nb-theme(text-basic-color);
  cursor: pointer;
}

.login-button {
  margin-top: nb-theme(margin);
  padding: nb-theme(padding-sm);
  background-color: nb-theme(color-primary-500);
  color: nb-theme(text-control-color);
  border: none;
  border-radius: nb-theme(border-radius);
  font-weight: nb-theme(text-button-font-weight);
  cursor: pointer;
  transition: background-color 0.2s ease;

  &:hover {
    background-color: nb-theme(color-primary-600);
  }

  &:disabled {
    background-color: nb-theme(background-basic-color-3);
    cursor: not-allowed;
  }
}

.login-footer {
  padding: nb-theme(padding) nb-theme(padding);
  text-align: center;
  border-top: 1px solid nb-theme(border-basic-color-3);
  background-color: nb-theme(background-basic-color-1);
}

.register-link {
  font-size: nb-theme(text-caption-font-size);
  color: nb-theme(text-basic-color);

  a {
    color: nb-theme(color-primary-500);
    text-decoration: none;
    font-weight: nb-theme(text-button-font-weight);

    &:hover {
      text-decoration: underline;
    }
  }
}

.social-login {
  margin-top: nb-theme(margin);
  display: flex;
  flex-direction: column;
  gap: nb-theme(margin-sm);
}

.social-login-title {
  font-size: nb-theme(text-caption-font-size);
  color: nb-theme(text-basic-color);
  text-align: center;
  position: relative;

  &::before,
  &::after {
    content: '';
    position: absolute;
    top: 50%;
    width: 30%;
    height: 1px;
    background-color: nb-theme(border-basic-color-3);
  }

  &::before {
    left: 0;
  }

  &::after {
    right: 0;
  }
}

.social-buttons {
  display: flex;
  justify-content: center;
  gap: nb-theme(margin-sm);
}

.social-button {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background-color: nb-theme(background-basic-color-2);
  color: nb-theme(text-basic-color);
  border: none;
  cursor: pointer;
  transition: all 0.2s ease;

  &:hover {
    transform: translateY(-2px);
    box-shadow: nb-theme(shadow-md);
  }

  &--google {
    background-color: #db4437;
    color: nb-theme(text-control-color);
  }

  &--facebook {
    background-color: #4267b2;
    color: nb-theme(text-control-color);
  }

  &--apple {
    background-color: #000000;
    color: nb-theme(text-control-color);
  }
}

.alert {
  padding: nb-theme(padding);
  margin-bottom: nb-theme(margin);
  border-radius: nb-theme(border-radius);
  font-size: nb-theme(text-caption-font-size);

  &-danger {
    background-color: rgba(nb-theme(color-danger-500), 0.1);
    color: nb-theme(color-danger-700);
    border: 1px solid rgba(nb-theme(color-danger-500), 0.2);
  }

  &-success {
    background-color: rgba(nb-theme(color-success-500), 0.1);
    color: nb-theme(color-success-700);
    border: 1px solid rgba(nb-theme(color-success-500), 0.2);
  }
}

// Loading spinner
.spinner {
  display: inline-block;
  width: 20px;
  height: 20px;
  border: 2px solid rgba(nb-theme(text-control-color), 0.3);
  border-radius: 50%;
  border-top-color: nb-theme(text-control-color);
  animation: spin 1s ease-in-out infinite;
  margin-right: nb-theme(margin-xs);
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

// Responsive styles
@media (max-width: nb-theme(breakpoint-sm)) {
  .login-container {
    padding: nb-theme(padding-sm);
  }

  .login-card {
    box-shadow: none;
  }

  .login-header {
    padding: nb-theme(padding-sm);
  }

  .login-body {
    padding: nb-theme(padding-sm);
  }
}

@include nb-install() {
  :host {
    display: block;
    max-width: 400px;
    margin: 0 auto;
    padding: nb-theme(padding);
  }

  .login-card {
    border-radius: nb-theme(border-radius);
    box-shadow: nb-theme(shadow);
    background-color: nb-theme(background-basic-color-1);

    nb-card-header {
      padding: nb-theme(padding);
      border-bottom: 1px solid nb-theme(border-basic-color-3);

      h3 {
        margin: 0;
        color: nb-theme(text-basic-color);
      }
    }

    nb-card-body {
      padding: nb-theme(padding);
    }

    nb-form-field {
      margin-bottom: nb-theme(margin);
    }

    .actions {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-top: nb-theme(margin-lg);
    }

    .forgot-password {
      color: nb-theme(text-hint-color);
      text-decoration: none;

      &:hover {
        color: nb-theme(color-primary-500);
      }
    }

    .register-link {
      display: block;
      text-align: center;
      margin-top: nb-theme(margin);
      color: nb-theme(text-hint-color);

      a {
        color: nb-theme(color-primary-500);
        text-decoration: none;

        &:hover {
          text-decoration: underline;
        }
      }
    }
  }
}

.danger-button {
  background-color: nb-theme(color-danger-600);
  color: white;
}
