/* Tinder Card Component Styles */
@use '@nebular/theme/styles/theming' as *;
@use '../../../core/design/animation-utilities' as animation;
@use '../../../core/design/micro-interactions' as micro;
@use '../../../core/design/dark-mode' as dark;

:host {
  display: block;
  width: 100%;
  height: 100%;
  perspective: 1000px;
}

nb-card.tinder-card {
  margin: 0;
  border-radius: nb-theme(card-border-radius);
  box-shadow: nb-theme(card-shadow);
  transition: transform 0.3s ease;
  background: nb-theme(background-basic-color-1);

  &.swiping {
    cursor: grabbing;
  }

  &.swiped-left {
    transform: translateX(-150%) rotate(-30deg);
  }

  &.swiped-right {
    transform: translateX(150%) rotate(30deg);
  }

  .card-media {
    position: relative;
    border-radius: nb-theme(card-border-radius) nb-theme(card-border-radius) 0 0;
    overflow: hidden;

    img,
    video {
      width: 100%;
      height: 300px;
      object-fit: cover;
    }

    .media-dots {
      position: absolute;
      bottom: 1rem;
      left: 50%;
      transform: translateX(-50%);
      display: flex;
      gap: 0.5rem;

      .media-dot {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        background: nb-theme(text-disabled-color);
        cursor: pointer;
        transition: background-color 0.2s;

        &.active {
          background: nb-theme(color-primary-500);
        }
      }
    }

    .media-nav-button {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      z-index: 2;

      &.prev-button {
        left: 1rem;
      }

      &.next-button {
        right: 1rem;
      }
    }

    .like-indicator,
    .dislike-indicator {
      position: absolute;
      top: 2rem;
      padding: 0.5rem 1rem;
      border-radius: nb-theme(border-radius);
      background: nb-theme(background-basic-color-1);
      display: flex;
      align-items: center;
      gap: 0.5rem;
      opacity: 0;
      transition: opacity 0.3s ease;

      nb-icon {
        font-size: 1.5rem;
      }
    }

    .like-indicator {
      right: 2rem;
      border: 2px solid nb-theme(color-success-500);
      color: nb-theme(color-success-500);
    }

    .dislike-indicator {
      left: 2rem;
      border: 2px solid nb-theme(color-danger-500);
      color: nb-theme(color-danger-500);
    }
  }

  nb-card-header {
    padding: 1rem;
    border-bottom: 1px solid nb-theme(divider-color);

    .card-title {
      margin: 0;
      font-size: nb-theme(text-heading-4-font-size);
      font-weight: nb-theme(text-heading-4-font-weight);
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .card-location {
      margin: 0.5rem 0 0;
      color: nb-theme(text-hint-color);
      display: flex;
      align-items: center;
      gap: 0.5rem;

      nb-icon {
        font-size: 1rem;
      }
    }
  }

  .card-body {
    padding: 1rem;

    .card-description {
      margin: 0 0 1rem;
      color: nb-theme(text-basic-color);
    }

    nb-tag-list {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
    }
  }

  nb-card-footer {
    padding: 1rem;
    display: flex;
    justify-content: space-around;
    border-top: 1px solid nb-theme(divider-color);

    button {
      nb-icon {
        font-size: 1.5rem;
      }
    }
  }
}

/* Card Media */
.card-media {
  position: relative;
  height: 70%;
  overflow: hidden;
  background-color: var(--neutral-300);

  // Dark mode support
  @include dark.background(var(--neutral-300));

  // Add subtle zoom effect on hover
  &:hover .card-image {
    transform: scale(1.05);
  }
}

.card-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform var(--transition-normal) var(--transition-timing-default);

  // Add fade-in animation
  @include animation.fade-in(0.3s);
}

.video-container {
  width: 100%;
  height: 100%;

  // Add fade-in animation
  @include animation.fade-in(0.3s);
}

.video-container video {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* Media Navigation */
.media-dots {
  position: absolute;
  top: var(--space-3);
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  gap: var(--space-2);
  z-index: 10;

  // Add slide-in animation
  @include animation.slide-in-top(0.3s, ease-out, 0.2s);
}

.media-dot {
  width: 6px;
  height: 6px;
  border-radius: var(--border-radius-full);
  background-color: rgba(255, 255, 255, 0.5);
  transition: all var(--transition-normal) var(--transition-timing-default);

  // Add pulse effect on hover
  &:hover {
    transform: scale(1.2);
    background-color: rgba(255, 255, 255, 0.8);
  }
}

.media-dot.active {
  width: 20px;
  border-radius: var(--border-radius-sm);
  background-color: var(--neutral-100);

  // Add subtle pulse animation
  animation: pulse 2s infinite;
}

.media-nav-button {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background-color: rgba(0, 0, 0, 0.3);
  color: var(--neutral-100);
  border: none;
  width: 40px;
  height: 40px;
  border-radius: var(--border-radius-full);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: all var(--transition-normal) var(--transition-timing-default);
  z-index: 10;

  // Add micro-interaction
  @include micro.click-ripple(var(--neutral-100));

  // Show buttons on card hover
  .tinder-card:hover & {
    opacity: 0.7;
  }
}

.media-nav-button:hover {
  opacity: 1 !important;
  background-color: rgba(0, 0, 0, 0.5);
  transform: translateY(-50%) scale(1.1);
}

.prev-button {
  left: var(--space-3);

  // Add slide-in animation
  .tinder-card:hover & {
    animation: slide-in-left 0.3s ease-out forwards;
  }
}

.next-button {
  right: var(--space-3);

  // Add slide-in animation
  .tinder-card:hover & {
    animation: slide-in-right 0.3s ease-out forwards;
  }
}

@keyframes slide-in-left {
  from {
    transform: translateX(-10px) translateY(-50%);
    opacity: 0;
  }
  to {
    transform: translateX(0) translateY(-50%);
    opacity: 0.7;
  }
}

@keyframes slide-in-right {
  from {
    transform: translateX(10px) translateY(-50%);
    opacity: 0;
  }
  to {
    transform: translateX(0) translateY(-50%);
    opacity: 0.7;
  }
}

/* Like/Dislike Indicators */
.like-indicator,
.dislike-indicator {
  position: absolute;
  top: 50%;
  transform: translateY(-50%) scale(0);
  padding: var(--space-3) var(--space-5);
  border-radius: var(--border-radius-md);
  font-weight: var(--font-weight-bold);
  font-size: var(--font-size-3xl);
  display: flex;
  align-items: center;
  opacity: 0;
  visibility: hidden; /* Hide completely when not active */
  transition:
    all var(--transition-normal) var(--transition-timing-default),
    visibility var(--transition-normal) var(--transition-timing-default);
  z-index: 10;

  // Add shadow for better visibility
  box-shadow: var(--shadow-md);

  // Add text shadow for better readability
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
}

.like-indicator {
  right: var(--space-5);
  color: var(--success);
  border: 4px solid var(--success);
  transform: translateY(-50%) rotate(20deg) scale(0);

  // Add glow effect when visible
  &[style*='opacity: 1'] {
    box-shadow: 0 0 15px rgba(var(--success-rgb), 0.5);
    animation: pulse-success 1s infinite alternate;
  }
}

.dislike-indicator {
  left: var(--space-5);
  color: var(--error);
  border: 4px solid var(--error);
  transform: translateY(-50%) rotate(-20deg) scale(0);

  // Add glow effect when visible
  &[style*='opacity: 1'] {
    box-shadow: 0 0 15px rgba(var(--error-rgb), 0.5);
    animation: pulse-error 1s infinite alternate;
  }
}

.like-indicator i,
.dislike-indicator i {
  margin-right: var(--space-3);

  // Add subtle rotation animation
  animation: subtle-rotate 2s ease-in-out infinite;
}

@keyframes pulse-success {
  0% {
    box-shadow: 0 0 5px rgba(var(--success-rgb), 0.5);
  }
  100% {
    box-shadow: 0 0 20px rgba(var(--success-rgb), 0.7);
  }
}

@keyframes pulse-error {
  0% {
    box-shadow: 0 0 5px rgba(var(--error-rgb), 0.5);
  }
  100% {
    box-shadow: 0 0 20px rgba(var(--error-rgb), 0.7);
  }
}

@keyframes subtle-rotate {
  0%,
  100% {
    transform: rotate(0deg);
  }
  25% {
    transform: rotate(5deg);
  }
  75% {
    transform: rotate(-5deg);
  }
}

/* Card Content */
.card-content {
  padding: var(--space-6);
  flex: 1;
  display: flex;
  flex-direction: column;

  // Dark mode support
  @include dark.background(var(--neutral-100));

  // Add slide-in animation
  @include animation.slide-in-bottom(0.4s, ease-out, 0.1s);
}

.card-header {
  margin-bottom: var(--space-4);
}

.card-title {
  font-family: var(--font-family-heading);
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-bold);
  margin: 0 0 var(--space-2);
  display: flex;
  align-items: center;
  color: var(--neutral-800);

  // Dark mode support
  @include dark.text(var(--neutral-800));

  // Add slide-in animation
  @include animation.slide-in-right(0.4s, ease-out, 0.2s);
}

.card-age {
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-normal);
  margin-left: var(--space-2);
  color: var(--neutral-600);

  // Dark mode support
  @include dark.text(var(--neutral-600));
}

.card-location {
  color: var(--neutral-600);
  margin: 0;
  display: flex;
  align-items: center;
  font-size: var(--font-size-md);

  // Dark mode support
  @include dark.text(var(--neutral-600));

  // Add slide-in animation
  @include animation.slide-in-right(0.4s, ease-out, 0.3s);
}

.card-location i {
  margin-right: var(--space-2);
  color: var(--primary);

  // Add subtle bounce animation
  animation: subtle-bounce 3s ease-in-out infinite;
}

.card-body {
  flex: 1;
}

.card-description {
  margin-bottom: var(--space-4);
  line-height: var(--line-height-relaxed);
  color: var(--neutral-700);
  display: -webkit-box;
  -webkit-line-clamp: 3;
  line-clamp: 3; /* Standard property for compatibility */
  -webkit-box-orient: vertical;
  box-orient: vertical; /* Standard property for compatibility */
  overflow: hidden;
  font-size: var(--font-size-md);

  // Dark mode support
  @include dark.text(var(--neutral-700));

  // Add fade-in animation
  @include animation.fade-in(0.5s, ease-out, 0.4s);
}

.card-tags {
  display: flex;
  flex-wrap: wrap;
  gap: var(--space-2);
  margin-bottom: var(--space-4);

  // Add staggered animation for children
  @include animation.stagger-children(fade-in, 0.3s, ease-out, 0.05s, '> *');
}

.card-tag {
  background-color: rgba(108, 99, 255, 0.1);
  color: var(--secondary);
  padding: var(--space-1) var(--space-3);
  border-radius: var(--border-radius-full);
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-medium);

  // Dark mode support
  @include dark.text(var(--secondary));

  // Add hover effect
  @include micro.hover-scale(1.05);
}

.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: auto;

  // Add slide-in animation
  @include animation.slide-in-bottom(0.4s, ease-out, 0.5s);
}

.action-button {
  width: 50px;
  height: 50px;
  border-radius: var(--border-radius-full);
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  box-shadow: var(--shadow-sm);
  transition: all var(--transition-normal) var(--transition-timing-default);
  cursor: pointer;

  // Add micro-interactions
  @include micro.click-ripple;
  @include micro.focus-highlight;

  // Add accessibility focus styles
  &:focus-visible {
    outline: 2px solid var(--primary);
    outline-offset: 2px;
  }
}

.action-button:hover {
  transform: translateY(-3px);
  box-shadow: var(--shadow-md);
}

.action-button i {
  font-size: var(--font-size-lg);
}

.info-button {
  background-color: var(--neutral-100);
  color: var(--info);
  border: var(--border-width-thin) solid var(--info);

  // Dark mode support
  @include dark.background(var(--neutral-100));
  @include dark.text(var(--info));
  @include dark.border(var(--info));
}

.dislike-button {
  background-color: var(--neutral-100);
  color: var(--error);
  border: var(--border-width-thin) solid var(--error);

  // Dark mode support
  @include dark.background(var(--neutral-100));
  @include dark.text(var(--error));
  @include dark.border(var(--error));
}

.like-button {
  background-color: var(--neutral-100);
  color: var(--success);
  border: var(--border-width-thin) solid var(--success);

  // Dark mode support
  @include dark.background(var(--neutral-100));
  @include dark.text(var(--success));
  @include dark.border(var(--success));
}

.chat-button {
  background-color: var(--neutral-100);
  color: var(--primary);
  border: var(--border-width-thin) solid var(--primary);

  // Dark mode support
  @include dark.background(var(--neutral-100));
  @include dark.text(var(--primary));
  @include dark.border(var(--primary));
}

.dislike-button:hover {
  background-color: var(--error);
  color: var(--neutral-100);

  i {
    animation: shake 0.5s ease-in-out;
  }
}

.like-button:hover {
  background-color: var(--success);
  color: var(--neutral-100);

  i {
    animation: pulse 0.5s ease-in-out;
  }
}

.info-button:hover {
  background-color: var(--info);
  color: var(--neutral-100);

  i {
    animation: rotate 0.5s ease-in-out;
  }
}

.chat-button:hover {
  background-color: var(--primary);
  color: var(--neutral-100);

  i {
    animation: bounce 0.5s ease-in-out;
  }
}

@keyframes shake {
  0%,
  100% {
    transform: translateX(0);
  }
  20%,
  60% {
    transform: translateX(-3px);
  }
  40%,
  80% {
    transform: translateX(3px);
  }
}

@keyframes pulse {
  0%,
  100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.2);
  }
}

@keyframes rotate {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

@keyframes bounce {
  0%,
  20%,
  50%,
  80%,
  100% {
    transform: translateY(0);
  }
  40% {
    transform: translateY(-5px);
  }
  60% {
    transform: translateY(-2px);
  }
}

@keyframes subtle-bounce {
  0%,
  100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-2px);
  }
}

/* Responsive Adjustments */
@media (max-width: 768px) {
  .card-title {
    font-size: var(--font-size-lg);
  }

  .card-description {
    font-size: var(--font-size-sm);
    -webkit-line-clamp: 2;
    line-clamp: 2; /* Standard property for compatibility */
  }

  .action-button {
    width: 45px;
    height: 45px;
  }

  // Optimize animations for smaller screens
  .card-content {
    @include animation.slide-in-bottom(0.3s, ease-out, 0.1s);
  }

  .card-title {
    @include animation.slide-in-right(0.3s, ease-out, 0.15s);
  }

  .card-location {
    @include animation.slide-in-right(0.3s, ease-out, 0.2s);
  }

  .card-description {
    @include animation.fade-in(0.3s, ease-out, 0.25s);
  }

  .card-footer {
    @include animation.slide-in-bottom(0.3s, ease-out, 0.3s);
  }
}

@media (max-width: 576px) {
  .card-content {
    padding: var(--space-4);
  }

  .card-media {
    height: 60%;
  }

  .action-button {
    width: 40px;
    height: 40px;
  }

  .action-button i {
    font-size: var(--font-size-md);
  }

  .like-indicator,
  .dislike-indicator {
    font-size: var(--font-size-xl);
    padding: var(--space-2) var(--space-4);
  }

  // Further optimize animations for mobile
  .tinder-card {
    @include animation.scale-in(0.3s);
  }

  // Reduce animation complexity for better performance
  @include animation.respect-reduced-motion;
}

// Respect user's preference for reduced motion
@media (prefers-reduced-motion: reduce) {
  .tinder-card,
  .card-content,
  .card-title,
  .card-location,
  .card-description,
  .card-footer,
  .media-dots,
  .like-indicator,
  .dislike-indicator,
  .card-location i,
  .action-button i {
    animation: none !important;
    transition: none !important;
  }
}
