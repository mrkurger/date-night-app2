@use 'src/styles/design-system/index.scss' as ds;
@use '../../../../core/design/emerald-tokens' as emerald;
@use 'sass:color';
// Define variables locally for testing
$border-radius-md: 0.375rem;
$border-radius-sm: 0.25rem;
emerald.$color-white: #f3f4f6;
emerald.$color-light-gray-1: #e5e7eb;
emerald.$color-light-gray-2: #d1d5db;
emerald.$color-medium-gray-1: #9ca3af;
emerald.$color-dark-gray-3: #1f2937;
emerald.$color-black: #111827;
$white: #ffffff;
$black: #000000;
$shadow-md:
  0 4px 6px -1px rgba(0, 0, 0, 0.1),
  0 2px 4px -1px rgba(0, 0, 0, 0.06);

// Emerald Carousel Component Styles
// Documentation: https://docs-emerald.condorlabs.io/Carousel

.emerald-carousel {
  position: relative;
  width: 100%;
  overflow: hidden;
  border-radius: $border-radius-md;

  // Aspect Ratios
  &--1-1 {
    .emerald-carousel__main {
      padding-bottom: 100%; // 1:1 aspect ratio
    }
  }

  &--4-3 {
    .emerald-carousel__main {
      padding-bottom: 75%; // 4:3 aspect ratio
    }
  }

  &--16-9 {
    .emerald-carousel__main {
      padding-bottom: 56.25%; // 16:9 aspect ratio
    }
  }

  &--21-9 {
    .emerald-carousel__main {
      padding-bottom: 42.85%; // 21:9 aspect ratio
    }
  }

  // Main Carousel
  &__main {
    position: relative;
    width: 100%;
  }

  // Carousel Items Container
  &__items {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  // Carousel Item
  &__item {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: opacity 0.5s ease;

    &--active {
      opacity: 1;
      z-index: 1;
    }
  }

  // Carousel Image
  &__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  // Carousel Video
  &__video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  // Navigation Arrows
  &__arrows {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
    pointer-events: none;
  }

  &__arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: rgba(emerald.$color-black, 0.6);
    color: emerald.$color-white;
    border: none;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    pointer-events: auto;
    transition:
      background-color 0.2s ease,
      transform 0.2s ease;

    &:hover {
      background-color: rgba(emerald.$color-black, 0.8);
      transform: translateY(-50%) scale(1.1);
    }

    &--prev {
      left: 16px;
    }

    &--next {
      right: 16px;
    }
  }

  // Navigation Dots
  &__dots {
    position: absolute;
    bottom: 16px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 8px;
    z-index: 2;
  }

  &__dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background-color: rgba(emerald.$color-white, 0.5);
    border: none;
    cursor: pointer;
    transition:
      background-color 0.2s ease,
      transform 0.2s ease;

    &:hover {
      background-color: rgba(emerald.$color-white, 0.8);
    }

    &--active {
      background-color: emerald.$color-white;
      transform: scale(1.2);
    }
  }

  // Thumbnails
  &--with-thumbnails {
    .emerald-carousel__main {
      margin-bottom: 8px;
    }
  }

  &__thumbnails {
    width: 100%;
    overflow-x: auto;
    scrollbar-width: thin;

    &::-webkit-scrollbar {
      height: 6px;
    }

    &::-webkit-scrollbar-track {
      background: emerald.$color-light-gray-1;
      border-radius: 3px;
    }

    &::-webkit-scrollbar-thumb {
      background-color: emerald.$color-medium-gray-1;
      border-radius: 3px;
    }
  }

  &__thumbnails-container {
    display: flex;
    gap: 8px;
    padding: 4px 0;
  }

  &__thumbnail {
    width: 60px;
    height: 60px;
    border-radius: $border-radius-sm;
    overflow: hidden;
    border: 2px solid transparent;
    padding: 0;
    cursor: pointer;
    transition: border-color 0.2s ease;

    &:hover {
      border-color: #d1d5db; /* neutral-300 */
    }

    &--active {
      border-color: #3b82f6; /* primary */
    }
  }

  &__thumbnail-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
}
