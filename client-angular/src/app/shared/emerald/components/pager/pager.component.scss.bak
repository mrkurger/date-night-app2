@use 'src/styles/design-system/index.scss' as ds;
@use '../../../../core/design/emerald-tokens' as emerald;
@use 'sass:color';
@use '../../../../core/design/design-tokens' as tokens;

// Font variables
$font-primary: emerald.$font-family-base;

// Emerald Pager Component Styles
// Documentation: https://docs-emerald.condorlabs.io/Pager

.emerald-pager {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: emerald.$spacing-4 0;
  font-family: $font-primary;

  // Alignment variants
  &--left {
    justify-content: flex-start;
  }

  &--right {
    justify-content: flex-end;
  }

  // Page size selector
  &__size-selector {
    display: flex;
    align-items: center;
    margin-right: emerald.$spacing-4;

    label {
      margin-right: emerald.$spacing-2;
      font-size: 0.875rem;
      color: emerald.$color-dark-gray-2;
    }

    select {
      padding: emerald.$spacing-1 emerald.$spacing-2;
      border: 1px solid emerald.$color-light-gray-2;
      border-radius: 0.375rem;
      background-color: emerald.$color-white;
      font-size: 0.875rem;
      color: emerald.$color-dark-gray-3;
      cursor: pointer;

      &:focus {
        outline: none;
        border-color: emerald.$color-primary;
        box-shadow: 0 0 0 2px rgba(emerald.$color-primary, 0.2);
      }
    }
  }

  // Pagination controls
  &__controls {
    display: flex;
    align-items: center;
  }

  // Page numbers container
  &__pages {
    display: flex;
    align-items: center;
  }

  // Current page indicator for simple style
  &__current {
    margin: 0 emerald.$spacing-2;
    font-size: 0.875rem;
    color: emerald.$color-dark-gray-3;

    .emerald-pager--large & {
      font-size: 1rem;
    }

    .emerald-pager--small & {
      font-size: 0.75rem;
    }
  }

  // Pagination buttons
  &__button {
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 36px;
    height: 36px;
    margin: 0 emerald.$spacing-1;
    padding: 0 emerald.$spacing-2;
    border: 1px solid emerald.$color-light-gray-2;
    border-radius: 0.375rem;
    background-color: emerald.$color-white;
    color: emerald.$color-dark-gray-3;
    font-size: 0.875rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;

    &:hover:not(:disabled) {
      background-color: emerald.$color-light-gray-1;
      border-color: emerald.$color-medium-gray-1;
    }

    &:focus {
      outline: none;
      box-shadow: 0 0 0 2px rgba(emerald.$color-primary, 0.2);
    }

    &:disabled {
      opacity: 0.5;
      cursor: not-allowed;
    }

    // Active page button
    &--active {
      background-color: emerald.$color-primary;
      border-color: emerald.$color-primary;
      color: emerald.$color-white;

      &:hover {
        background-color: emerald.$color-primary-dark;
        border-color: emerald.$color-primary-dark;
      }
    }

    // Size variants
    .emerald-pager--large & {
      min-width: 44px;
      height: 44px;
      font-size: 1rem;
    }

    .emerald-pager--small & {
      min-width: 28px;
      height: 28px;
      font-size: 0.75rem;
      padding: 0 emerald.$spacing-1;
    }

    // Style variants
    .emerald-pager--compact & {
      min-width: 32px;
      margin: 0 emerald.$spacing-1;
    }
  }
}

// Responsive adjustments
@media (max-width: 640px) {
  .emerald-pager {
    flex-direction: column;

    &__size-selector {
      margin-right: 0;
      margin-bottom: emerald.$spacing-2;
    }

    &__button {
      min-width: 32px;
      height: 32px;
      margin: 0 emerald.$spacing-1;
    }
  }
}
