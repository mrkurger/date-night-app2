@use 'src/styles/design-system/index.scss' as ds;
@use '../../../../core/design/emerald-tokens' as emerald;
@use 'sass:color';
@use '../../../../core/design/design-tokens' as tokens;

// Define missing variables
$primary: emerald.$color-primary;
$danger: emerald.$color-error;

// Shadow variables
$shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.05);
$shadow-md:
  0 4px 6px -1px rgba(0, 0, 0, 0.1),
  0 2px 4px -1px rgba(0, 0, 0, 0.06);
$shadow-lg:
  0 10px 15px -3px rgba(0, 0, 0, 0.1),
  0 4px 6px -2px rgba(0, 0, 0, 0.05);

// Emerald Toggle Component Styles
// Documentation: https://docs-emerald.condorlabs.io/Toggle

.emerald-toggle-container {
  display: flex;
  align-items: center;

  // Label Positions
  &--label-left {
    flex-direction: row;

    .emerald-toggle__label {
      margin-right: 12px;
    }
  }

  &--label-right {
    flex-direction: row;

    .emerald-toggle__label {
      margin-left: 12px;
    }
  }

  &--disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }
}

.emerald-toggle {
  position: relative;
  display: inline-block;

  // Toggle Sizes
  &--small {
    width: 36px;
    height: 20px;

    .emerald-toggle__thumb {
      width: 16px;
      height: 16px;
    }

    &.emerald-toggle--checked .emerald-toggle__thumb {
      transform: translateX(16px);
    }
  }

  &--medium {
    width: 48px;
    height: 24px;

    .emerald-toggle__thumb {
      width: 20px;
      height: 20px;
    }

    &.emerald-toggle--checked .emerald-toggle__thumb {
      transform: translateX(24px);
    }
  }

  &--large {
    width: 60px;
    height: 30px;

    .emerald-toggle__thumb {
      width: 26px;
      height: 26px;
    }

    &.emerald-toggle--checked .emerald-toggle__thumb {
      transform: translateX(30px);
    }
  }

  // Toggle Colors
  &--primary {
    &.emerald-toggle--checked .emerald-toggle__track {
      background-color: $primary;
    }
  }

  &--success {
    &.emerald-toggle--checked .emerald-toggle__track {
      background-color: emerald.$color-success;
    }
  }

  &--warning {
    &.emerald-toggle--checked .emerald-toggle__track {
      background-color: emerald.$color-warning;
    }
  }

  &--danger {
    &.emerald-toggle--checked .emerald-toggle__track {
      background-color: $danger;
    }
  }

  &--info {
    &.emerald-toggle--checked .emerald-toggle__track {
      background-color: emerald.$color-info;
    }
  }

  // Toggle Input
  &__input {
    opacity: 0;
    width: 0;
    height: 0;
    position: absolute;

    &:focus + .emerald-toggle__track {
      box-shadow: 0 0 0 2px rgba($primary, 0.3);
    }
  }

  // Toggle Track
  &__track {
    position: absolute;
    cursor: pointer;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: emerald.$color-medium-gray-1;
    transition: background-color 0.2s ease;
    border-radius: 34px;
    display: flex;
    align-items: center;
    padding: 2px;

    .emerald-toggle--disabled & {
      cursor: not-allowed;
    }
  }

  // Toggle Thumb
  &__thumb {
    background-color: emerald.$color-white;
    border-radius: 50%;
    transition: transform 0.2s ease;
    box-shadow: $shadow-sm;
  }
}

// Toggle Label
.emerald-toggle__label {
  font-size: 0.875rem;
  color: emerald.$color-dark-gray-3;
  cursor: pointer;

  .emerald-toggle-container--disabled & {
    cursor: not-allowed;
  }
}

// Required Indicator
.emerald-toggle__required {
  color: $danger;
  margin-left: 2px;
}
