@use '../../../core/design/design-tokens' as tokens;

.ad-card {
  display: flex;
  flex-direction: column;
  background-color: var(--neutral-100);
  border-radius: var(--border-radius-lg);
  overflow: hidden;
  box-shadow: var(--shadow-sm);
  transition:
    transform var(--transition-normal) var(--transition-ease),
    box-shadow var(--transition-normal) var(--transition-ease);
  cursor: pointer;
  height: 100%;

  &:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-md);

    .ad-card-image {
      transform: scale(1.05);
    }
  }

  // Card Size Variations
  &.ad-card-size-small {
    .ad-card-media {
      height: 140px;
    }

    .ad-card-title {
      font-size: var(--font-size-base);
    }

    &.ad-card-list {
      height: 140px;

      .ad-card-media {
        width: 140px;
        min-width: 140px;
      }
    }
  }

  &.ad-card-size-medium {
    .ad-card-media {
      height: 180px;
    }

    .ad-card-title {
      font-size: var(--font-size-lg);
    }

    &.ad-card-list {
      height: 180px;

      .ad-card-media {
        width: 180px;
        min-width: 180px;
      }
    }
  }

  &.ad-card-size-large {
    .ad-card-media {
      height: 220px;
    }

    .ad-card-title {
      font-size: var(--font-size-xl);
    }

    &.ad-card-list {
      height: 220px;

      .ad-card-media {
        width: 220px;
        min-width: 220px;
      }
    }
  }

  // Content Density Variations
  &.ad-card-density-comfortable {
    .ad-card-content {
      padding: 1rem;
    }

    .ad-card-description {
      margin-bottom: 1rem;
      -webkit-line-clamp: 3;
    }

    .ad-card-footer {
      margin-top: 0.75rem;
    }
  }

  &.ad-card-density-compact {
    .ad-card-content {
      padding: 0.75rem;
    }

    .ad-card-description {
      margin-bottom: 0.75rem;
      font-size: var(--font-size-xs);
      -webkit-line-clamp: 2;
    }

    .ad-card-footer {
      margin-top: 0.5rem;
    }

    .ad-card-meta {
      font-size: var(--font-size-xs);
    }
  }

  &.ad-card-density-condensed {
    .ad-card-content {
      padding: 0.5rem;
    }

    .ad-card-title {
      margin-bottom: 0.25rem;
    }

    .ad-card-description {
      margin-bottom: 0.5rem;
      font-size: var(--font-size-xs);
      -webkit-line-clamp: 1;
    }

    .ad-card-footer {
      margin-top: 0.25rem;
    }

    .ad-card-meta {
      font-size: var(--font-size-xs);
    }

    .ad-card-actions button {
      width: 28px;
      height: 28px;
      line-height: 28px;

      mat-icon {
        font-size: 16px;
        width: 16px;
        height: 16px;
      }
    }
  }

  // List layout
  &.ad-card-list {
    flex-direction: row;
    height: 180px;

    .ad-card-media {
      width: 180px;
      min-width: 180px;
      height: 100%;
    }

    .ad-card-content {
      flex: 1;
      display: flex;
      flex-direction: column;
    }

    .ad-card-footer {
      margin-top: auto;
    }
  }

  // Compact layout
  &.ad-card-compact {
    .ad-card-media {
      height: 140px;
    }

    .ad-card-title {
      font-size: var(--font-size-md);
    }

    .ad-card-description {
      display: none;
    }

    .ad-card-tags {
      display: none;
    }

    .ad-card-meta {
      display: none;
    }
  }

  // Card sizes
  &.ad-card-size-small {
    .ad-card-media {
      height: 160px;
    }

    .ad-card-title {
      font-size: var(--font-size-sm);
    }

    .ad-card-description {
      font-size: var(--font-size-xs);
      max-height: 2.4em;
    }

    .ad-card-content {
      padding: 0.5rem;
    }

    .ad-card-footer {
      padding-top: 0.5rem;
    }

    .tag {
      font-size: var(--font-size-xs);
      padding: 0.25rem 0.5rem;
    }

    &.ad-card-list {
      height: 120px;

      .ad-card-media {
        width: 120px;
        min-width: 120px;
      }
    }
  }

  &.ad-card-size-medium {
    // Default styles already applied
  }

  &.ad-card-size-large {
    .ad-card-media {
      height: 240px;
    }

    .ad-card-title {
      font-size: var(--font-size-lg);
    }

    .ad-card-description {
      font-size: var(--font-size-md);
      max-height: 4.8em;
    }

    .ad-card-content {
      padding: 1rem;
    }

    .ad-card-footer {
      padding-top: 1rem;
    }

    .tag {
      font-size: var(--font-size-sm);
      padding: 0.25rem 0.75rem;
    }

    &.ad-card-list {
      height: 220px;

      .ad-card-media {
        width: 220px;
        min-width: 220px;
      }
    }
  }

  // Content density
  &.ad-card-density-comfortable {
    // Default styles already applied
  }

  &.ad-card-density-compact {
    .ad-card-content {
      padding: 0.5rem;
    }

    .ad-card-title {
      margin-bottom: 0.25rem;
    }

    .ad-card-description {
      margin-bottom: 0.25rem;
    }

    .ad-card-footer {
      padding-top: 0.25rem;
    }

    .ad-card-tags {
      margin-bottom: 0.25rem;
    }
  }

  &.ad-card-density-condensed {
    .ad-card-content {
      padding: 0.25rem;
    }

    .ad-card-title {
      margin-bottom: 0.25rem;
      line-height: 1.2;
    }

    .ad-card-description {
      margin-bottom: 0.25rem;
      line-height: 1.2;
    }

    .ad-card-footer {
      padding-top: 0.25rem;
    }

    .ad-card-tags {
      margin-bottom: 0.25rem;
      gap: 0.25rem;
    }

    .ad-card-meta {
      font-size: var(--font-size-xs);
    }
  }

  // Featured card
  &.ad-card-featured {
    border: 2px solid var(--primary-300);
    box-shadow:
      0 0 0 1px var(--primary-300),
      var(--shadow-md);

    &::before {
      content: 'Featured';
      position: absolute;
      top: 0.75rem;
      right: var(--spacing-8);
      background-color: var(--primary-500);
      color: var(--neutral-100);
      padding: 0.25rem 1.5rem;
      font-size: var(--font-size-xs);
      font-weight: var(--font-weight-bold);
      text-transform: uppercase;
      transform: rotate(45deg);
      z-index: 2;
    }
  }

  // New card
  &.ad-card-new {
    &::after {
      content: 'New';
      position: absolute;
      top: 0.75rem;
      left: 0.75rem;
      background-color: var(--success-color);
      color: var(--neutral-100);
      padding: 0.25rem 0.5rem;
      font-size: var(--font-size-xs);
      font-weight: var(--font-weight-bold);
      text-transform: uppercase;
      border-radius: var(--border-radius-sm);
      z-index: 2;
    }
  }

  // Trending card
  &.ad-card-trending {
    &::after {
      content: 'Trending';
      position: absolute;
      top: 0.75rem;
      left: 0.75rem;
      background-color: var(--warning-color);
      color: var(--neutral-900);
      padding: 0.25rem 0.5rem;
      font-size: var(--font-size-xs);
      font-weight: var(--font-weight-bold);
      text-transform: uppercase;
      border-radius: var(--border-radius-sm);
      z-index: 2;
    }
  }
}

// Media section
.ad-card-media {
  position: relative;
  height: 220px;
  overflow: hidden;

  .ad-card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-normal) var(--transition-ease);
  }

  // Image count badge
  .image-count {
    position: absolute;
    top: 0.75rem;
    right: 0.75rem;
    background-color: rgba(var(--neutral-900), 0.7);
    color: var(--neutral-100);
    padding: 0.25rem 0.5rem;
    border-radius: var(--border-radius-md);
    display: flex;
    align-items: center;
    font-size: var(--font-size-sm);
    z-index: 1;

    mat-icon {
      font-size: 16px;
      width: 16px;
      height: 16px;
      margin-right: 0.25rem;
    }
  }

  // Status badges
  .status-badges {
    position: absolute;
    bottom: 0.75rem;
    left: 0.75rem;
    display: flex;
    flex-wrap: wrap;
    gap: 0.25rem;
    z-index: 1;

    .badge {
      padding: 0.25rem 0.5rem;
      border-radius: var(--border-radius-sm);
      font-size: var(--font-size-xs);
      font-weight: var(--font-weight-semibold);
      text-transform: uppercase;

      &.badge-featured {
        background-color: var(--primary-500);
        color: var(--neutral-100);
      }

      &.badge-new {
        background-color: var(--success-color);
        color: var(--neutral-100);
      }

      &.badge-trending {
        background-color: var(--warning-color);
        color: var(--neutral-900);
      }

      &.badge-touring {
        background-color: var(--info-color);
        color: var(--neutral-100);
      }
    }
  }

  // Category badge
  .category-badge {
    position: absolute;
    top: 0.75rem;
    left: 0.75rem;
    z-index: 1;

    .badge {
      background-color: rgba(var(--neutral-900), 0.7);
      color: var(--neutral-100);
      padding: 0.25rem 0.5rem;
      border-radius: var(--border-radius-sm);
      font-size: var(--font-size-xs);
      font-weight: var(--font-weight-semibold);
    }
  }

  // Price badge
  .price-badge {
    position: absolute;
    bottom: 0.75rem;
    right: 0.75rem;
    z-index: 1;

    .badge-price {
      background-color: var(--secondary-500);
      color: var(--neutral-900);
      padding: 0.25rem 0.5rem;
      border-radius: var(--border-radius-sm);
      font-size: var(--font-size-sm);
      font-weight: var(--font-weight-bold);
    }
  }
}

// Content section
.ad-card-content {
  padding: 1rem;
  display: flex;
  flex-direction: column;
  flex: 1;
}

// Card header
.ad-card-header {
  margin-bottom: 0.75rem;
}

// Card title
.ad-card-title {
  margin: 0 0 0.5rem;
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-semibold);
  line-height: var(--line-height-tight);
  color: var(--neutral-900);
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

// Card location
.ad-card-location {
  display: flex;
  align-items: center;
  margin: 0;
  color: var(--neutral-600);
  font-size: var(--font-size-sm);

  mat-icon {
    font-size: 16px;
    width: 16px;
    height: 16px;
    margin-right: 0.25rem;
  }
}

// Card description
.ad-card-description {
  margin: 0 0 0.75rem;
  color: var(--neutral-700);
  font-size: var(--font-size-sm);
  line-height: 1.5;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

// Card tags
.ad-card-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 0.25rem;
  margin-bottom: 0.75rem;

  .tag {
    background-color: var(--neutral-200);
    color: var(--neutral-700);
    padding: 0.25rem 0.5rem;
    border-radius: var(--border-radius-full);
    font-size: var(--font-size-xs);

    &.more-tag {
      background-color: var(--neutral-300);
      color: var(--neutral-800);
    }
  }
}

// Card footer
.ad-card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: auto;
  padding-top: 0.75rem;
  border-top: 1px solid var(--neutral-200);
}

// Card meta
.ad-card-meta {
  display: flex;
  align-items: center;
  gap: 0.75rem;

  .ad-card-date,
  .ad-card-views {
    display: flex;
    align-items: center;
    color: var(--neutral-600);
    font-size: var(--font-size-xs);

    mat-icon {
      font-size: 14px;
      width: 14px;
      height: 14px;
      margin-right: 0.25rem;
    }
  }
}

// Card actions
.ad-card-actions {
  display: flex;
  gap: 0.25rem;

  button {
    width: 32px;
    height: 32px;
    line-height: 32px;

    mat-icon {
      font-size: 18px;
      width: 18px;
      height: 18px;
    }
  }
}

// Responsive styles
@media (max-width: var(--breakpoint-md)) {
  .ad-card.ad-card-list {
    flex-direction: column;
    height: auto;

    .ad-card-media {
      width: 100%;
      height: 180px;
    }
  }
}

@media (max-width: var(--breakpoint-sm)) {
  .ad-card-media {
    height: 180px;
  }

  .ad-card-title {
    font-size: var(--font-size-base);
  }

  .ad-card-content {
    padding: 0.75rem;
  }

  .ad-card-footer {
    flex-direction: column;
    align-items: flex-start;
    gap: 0.5rem;
  }

  .ad-card-actions {
    width: 100%;
    justify-content: space-between;
  }
}
