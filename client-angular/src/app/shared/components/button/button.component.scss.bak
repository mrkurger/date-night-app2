:host {
  display: inline-flex;
  align-items: center;
}

.button-content {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}

.icon-wrapper {
  display: flex;
  align-items: center;
  gap: 0.5rem; // Default gap between icon and text, can be adjusted per size.

  // Sizing for icons
  border-radius: 0.5rem; // Default radius, consider using an Emerald token if available.

  &.left {
    margin-right: 0.25rem;
  }

  &.right {
    margin-left: 0.25rem;
  }
}

.size-sm {
  font-size: 0.875rem;

  .icon-wrapper {
    nb-icon {
      font-size: 1rem;
    }
  }
}

.size-md {
  font-size: 1rem;

  .icon-wrapper {
    nb-icon {
      font-size: 1.25rem;
    }
  }
}

.size-lg {
  font-size: 1.125rem;

  .icon-wrapper {
    nb-icon {
      font-size: 1.5rem;
    }
  }
}

.size-xl {
  font-size: 1.25rem;

  .icon-wrapper {
    nb-icon {
      font-size: 1.75rem;
    }
  }
}
