@use '@nebular/theme/styles/theming' as *;

// Sort Header Styles
.nb-sort-header-container {
  display: flex;
  align-items: center;
  cursor: pointer;
  user-select: none;
  padding: nb-theme(padding);

  &:hover {
    background-color: nb-theme(background-basic-color-hover);
  }
}

.nb-sort-header-arrow {
  display: flex;
  align-items: center;
  margin-left: nb-theme(margin);
  height: 1rem;
  width: 1rem;
  position: relative;
}

.nb-sort-header-pointer-left,
.nb-sort-header-pointer-right {
  background: nb-theme(text-hint-color);
  height: 0.125rem;
  width: 0.5rem;
  position: absolute;
  transition: transform nb-theme(transition-duration);
}

.nb-sort-header-pointer-left {
  transform-origin: right;
  left: 0;

  &.asc {
    transform: rotate(-45deg);
  }

  &.desc {
    transform: rotate(45deg);
  }
}

.nb-sort-header-pointer-right {
  transform-origin: left;
  right: 0;

  &.asc {
    transform: rotate(45deg);
  }

  &.desc {
    transform: rotate(-45deg);
  }
}

// Paginator Styles
.nb-paginator-container {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding: nb-theme(padding);
  background-color: nb-theme(background-basic-color-1);
  border-top: nb-theme(divider-width) solid nb-theme(border-basic-color-3);
}

.nb-paginator-size {
  display: flex;
  align-items: center;
  margin-right: nb-theme(margin-2x);

  select {
    margin-right: nb-theme(margin);
    padding: nb-theme(select-padding);
    border: nb-theme(select-border-width) solid nb-theme(border-basic-color-3);
    border-radius: nb-theme(border-radius);
    background-color: nb-theme(background-basic-color-1);
    color: nb-theme(text-basic-color);

    &:hover {
      border-color: nb-theme(border-basic-color-4);
    }

    &:focus {
      border-color: nb-theme(color-primary-focus);
      outline: none;
    }
  }
}

.nb-paginator-range {
  margin-right: nb-theme(margin-2x);
  color: nb-theme(text-hint-color);
}

.nb-paginator-navigation {
  display: flex;
  gap: nb-theme(spacing);

  button {
    padding: nb-theme(button-padding);
    border: nb-theme(button-border-width) solid nb-theme(border-basic-color-3);
    border-radius: nb-theme(border-radius);
    background-color: nb-theme(background-basic-color-1);
    color: nb-theme(text-basic-color);
    cursor: pointer;
    transition: all nb-theme(transition-duration);

    &:hover:not(:disabled) {
      background-color: nb-theme(background-basic-color-hover);
      border-color: nb-theme(border-basic-color-4);
    }

    &:active:not(:disabled) {
      background-color: nb-theme(background-basic-color-active);
      border-color: nb-theme(border-basic-color-5);
    }

    &:disabled {
      opacity: nb-theme(opacity-disabled);
      cursor: not-allowed;
    }
  }
}

// Divider Styles
.nb-divider {
  height: nb-theme(divider-width);
  background-color: nb-theme(divider-color);
  margin: nb-theme(margin) 0;

  &.vertical {
    height: 100%;
    width: nb-theme(divider-width);
    margin: 0 nb-theme(margin);
  }
}
