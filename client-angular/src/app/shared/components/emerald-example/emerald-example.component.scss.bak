@use '../../../core/design/typography-mixins' as typography;
@use 'src/app/core/design/main' as ds;

.emerald-example {
  padding: ds.$spacing-4;

  h2 {
    @include typography.heading-2;
    margin-bottom: ds.$spacing-4;
  }

  h3 {
    @include typography.heading-3;
    margin-bottom: ds.$spacing-3;
    color: ds.$color-dark-gray-3;
  }

  .example-section {
    margin-bottom: ds.$spacing-6;
  }

  // Button examples
  .button-examples {
    display: flex;
    flex-wrap: wrap;
    gap: ds.$spacing-2;
  }

  // Alert examples
  .alert-examples {
    display: flex;
    flex-direction: column;
    gap: ds.$spacing-2;
  }

  // Badge examples
  .badge-examples {
    display: flex;
    flex-wrap: wrap;
    gap: ds.$spacing-2;
    align-items: center;
  }

  // Card styling
  .eui-card {
    transition:
      transform 0.2s ease,
      box-shadow 0.2s ease;

    &:hover {
      transform: translateY(-5px);
      box-shadow: ds.$shadow-md;
    }

    .eui-card-title {
      font-family: ds.$font-family-heading;
      font-weight: ds.$font-weight-semibold;
      font-size: ds.$font-size-lg;
      margin: 0;
    }

    .eui-card-text {
      color: ds.$color-dark-gray-1;
      font-size: ds.$font-size-sm;
    }

    .eui-card-footer {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: ds.$spacing-3 ds.$spacing-4;
    }
  }

  // Rating stars
  .rating {
    color: ds.$color-warning;

    i {
      margin-right: 2px;
    }
  }

  // Price
  .price {
    font-weight: ds.$font-weight-semibold;
    color: ds.$color-dark-gray-3;
  }

  // Form styling
  .eui-form-group {
    margin-bottom: ds.$spacing-4;

    label {
      display: block;
      margin-bottom: ds.$spacing-2;
      font-weight: ds.$font-weight-medium;
      color: ds.$color-dark-gray-2;
    }
  }

  // Utility classes
  .mt-3 {
    margin-top: ds.$spacing-3;
  }

  .mb-4 {
    margin-bottom: ds.$spacing-4;
  }

  .h-100 {
    height: 100%;
  }

  .text-muted {
    color: ds.$color-dark-gray-1;
  }

  .d-flex {
    display: flex;
  }

  .justify-content-between {
    justify-content: space-between;
  }

  .align-items-center {
    align-items: center;
  }

  // Responsive adjustments
  @media (max-width: ds.$breakpoint-tablet) {
    .eui-row {
      flex-direction: column;
    }

    .button-examples,
    .badge-examples {
      flex-wrap: wrap;
    }
  }
}
